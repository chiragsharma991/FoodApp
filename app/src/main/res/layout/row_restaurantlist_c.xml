<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <!--
                <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>
        -->
        <import type="android.view.View" />


        <variable
            name="ordertype"
            type="String">

        </variable>

        <variable
            name="kstatus"
            type="Boolean">

        </variable>

        <variable
            name="restaurant"
            type="dk.eatmore.foodapp.model.home.Restaurant">

        </variable>

    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/search_view"
        style="@style/CardViewStyle"
        android:layout_below="@+id/free_txt"
        android:layout_margin="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:transitionName="@string/transition_string"
        app:cardBackgroundColor="@{(ordertype.equalsIgnoreCase(@string/preorder)) ? @color/white_light : @color/white }"
        app:cardUseCompatPadding="true"

        >

        <RelativeLayout
            android:id="@+id/rowChildItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.constraint.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.23" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.62" />


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <!--                        <android.support.v7.widget.CardView
                                                    android:layout_width="@dimen/_60sdp"
                                                    android:layout_height="@dimen/_60sdp"
                                                    app:cardCornerRadius="@dimen/_8sdp"
                                                    app:cardBackgroundColor="@android:color/transparent"
                                                    app:cardElevation="@dimen/_2sdp">-->

                        <RelativeLayout
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imageview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />


                            <RelativeLayout
                                android:id="@+id/item_is_new"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentBottom="false"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:rotation="-40"
                                android:translationX="-16dp"
                                android:translationY="0dp"
                                android:visibility="@{restaurant.is_new.equalsIgnoreCase(`1`) ? View.VISIBLE : View.GONE}">

                                <dk.eatmore.foodapp.utils.ZigzagView
                                    android:id="@+id/zigzag_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:zigzagBackgroundColor="@color/green"
                                    app:zigzagHeight="1dp"
                                    app:zigzagShadowAlpha="0.9"
                                    app:zigzagSides="bottom">


                                </dk.eatmore.foodapp.utils.ZigzagView>


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:layout_centerInParent="true"
                                    android:singleLine="true"
                                    android:text="@string/new_rest"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp" />


                            </RelativeLayout>


                        </RelativeLayout>


                        <!--
                                                    </android.support.v7.widget.CardView>
                        -->


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Titlelight_TextViewSmall"
                            android:text="@{restaurant.restaurant_name}" />


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/cuisines_txt"
                            style="@style/Subtitle_TextViewSmall"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:maxLines="3"
                            android:text="@{restaurant.cuisines}" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:scaleType="centerInside"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@mipmap/price_tag" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:layout_gravity="center_vertical"
                                android:maxLength="4"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text="-20%"
                                android:textColor="@color/white" />


                        </FrameLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="top"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/map_marker"
                                android:tint="@color/black" />


                            <android.support.v7.widget.AppCompatTextView
                                style="@style/SubtitleRegular_TextViewSmall"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="@{restaurant.address}" />


                        </LinearLayout>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/not_available_txt"
                            style="@style/Subtitle_TextViewSmall"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_23sdp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/ikke_tilg_ngelig"
                            android:textColor="@color/theme_color"
                            android:visibility="@{(ordertype.equalsIgnoreCase(@string/notavailable)) ? View.VISIBLE : View.GONE }" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_ratedview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    >

                                   <!-- <android.support.v7.widget.AppCompatImageView
                                        android:id="@+id/favorite_btn"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_centerVertical="true"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/heart_full"
                                        android:tint="@color/gray"
                                        android:visibility="@{kstatus ? View.VISIBLE : View.GONE}" />

                                    <ProgressBar
                                        android:id="@+id/fav_progress"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="@dimen/_8sdp"
                                        android:layout_height="2dp"
                                        android:layout_alignEnd="@+id/favorite_btn"
                                        android:layout_alignBottom="@+id/favorite_btn"
                                        android:layout_marginEnd="4dp"
                                        android:indeterminate="true"
                                        android:progress="20"
                                        android:rotation="180"
                                        android:scaleY="4"
                                        android:visibility="gone" />

                                    <View
                                        android:id="@+id/vertical_divider"
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_toStartOf="@+id/favorite_btn"
                                        android:alpha="0.2"
                                        android:background="@color/divider_color"
                                        android:visibility="@{kstatus ? View.VISIBLE : View.GONE}" />-->

                                    <android.support.v7.widget.AppCompatImageView
                                        android:id="@+id/favorite_btn"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/vertical_divider"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/heart_full"
                                        android:tint="@color/gray"
                                        android:visibility="@{kstatus ? View.VISIBLE : View.GONE}" />


                                    <View
                                        android:id="@+id/vertical_divider"
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_toStartOf="@+id/rating"
                                        android:alpha="0.2"
                                        android:background="@color/divider_color"
                                        android:visibility="@{kstatus ? View.VISIBLE : View.GONE}" />

                                    <RatingBar
                                        android:id="@+id/rating"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:isIndicator="true"
                                        android:numStars="6"
                                        android:layout_alignParentRight="true"
                                        android:rating="@{restaurant.total_rating}"
                                        android:stepSize="0.0" />

                                </RelativeLayout>


                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/ratingtxt"
                                    style="@style/Subtitle_TextViewSmall"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/hindvadodara_regular"
                                    android:singleLine="true"
                                    android:text="@{@string/restaurant_rating(restaurant.total_review_count)}"
                                    android:textColor="@color/black_light">

                                </android.support.v7.widget.AppCompatTextView>

                                <android.support.v7.widget.AppCompatButton
                                    android:id="@+id/order_now"
                                    style="@style/Button"
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/background_light"
                                    android:backgroundTint="@color/theme_color"
                                    android:fontFamily="@font/hindvadodara_light"
                                    android:text="@{ordertype}"
                                    android:textColor="@color/white"
                                    android:visibility="@{(ordertype.equalsIgnoreCase(@string/notavailable)) ? View.INVISIBLE : View.VISIBLE }" />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>


                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_8sdp"
                    android:alpha="0.2"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_one" />

                <LinearLayout
                    android:id="@+id/linear_restinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:visibility="@{(ordertype.equalsIgnoreCase(@string/notavailable)) ? View.GONE : View.VISIBLE }"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view_divider">

                    <LinearLayout
                        android:id="@+id/deliverypresent_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/motorcycle" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/delivery_present"
                            style="@style/SubtitleRegular_TextViewSmall"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/minimum_order_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/danish_krone" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/minimum_order"
                            style="@style/SubtitleRegular_TextViewSmall"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/opening_hours_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/stopwatch" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/opening_hour"
                            style="@style/SubtitleRegular_TextViewSmall"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center" />


                    </LinearLayout>


                </LinearLayout>

                <!--      <View
                          android:id="@+id/view_divider_two"
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:layout_marginEnd="@dimen/_8sdp"
                          android:layout_marginTop="@dimen/_8sdp"
                          android:layout_marginBottom="@dimen/_16sdp"
                          android:alpha="0.2"
                          android:background="@color/divider_color"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:visibility="invisible"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/linear_restinfo"
                          app:layout_constraintBottom_toBottomOf="parent"
                          />
      -->

                <ProgressBar
                    android:id="@+id/fav_proress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:indeterminate="true"
                    android:scaleY="4"
                    android:visibility="@{restaurant.fav_progress ? View.VISIBLE  : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blocking_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="#99ffffff"
            android:visibility="@{(ordertype.equalsIgnoreCase(@string/notavailable)) ? View.VISIBLE : View.GONE }">

        </RelativeLayout>
<!--
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="#99ffffff"
            android:visibility="@{(ordertype.equalsIgnoreCase(@string/preorder)) ? View.VISIBLE : View.GONE }">

        </RelativeLayout>
-->

    </android.support.v7.widget.CardView>


</layout>



