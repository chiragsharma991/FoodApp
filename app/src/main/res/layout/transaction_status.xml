<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="dk.eatmore.foodapp.model.User">

        </variable>


        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.EditCart.MyClickHandler">

        </variable>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/background_light"
        android:id="@+id/constraint"
        >

        <FrameLayout
            android:id="@+id/pamentmethod_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/transactionstatus_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/clayout_crt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:fitsSystemWindows="true"
                    android:theme="@style/AppTheme.NoActionBar">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapse_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                        app:titleEnabled="false">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewLarge"
                                    android:singleLine="true"
                                    android:text="Payment Method"
                                    android:textColor="@color/black" />


                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color" />


                        </LinearLayout>


                    </android.support.design.widget.CollapsingToolbarLayout>


                </android.support.design.widget.AppBarLayout>


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <FrameLayout
                            android:id="@+id/cart_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false" />


                        </FrameLayout>


                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>


            </android.support.design.widget.CoordinatorLayout>


        </FrameLayout>


        <LinearLayout
            android:id="@+id/transactionstatus_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >


            <android.support.v7.widget.CardView
                android:id="@+id/address_card"
                style="@style/CardViewStyle"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/processDialog"
                    android:visibility="gone"
                    >
                    <FrameLayout
                        android:id="@+id/signup_view"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_marginTop="?attr/actionBarSize"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="?android:attr/progressBarStyleLarge"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_200sdp"
                            android:visibility="visible"
                            android:indeterminate="true" />


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewMid"
                            android:singleLine="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:textColor="@color/black_light"
                            android:text="Loading..." />


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewSmall"
                            android:singleLine="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="@dimen/_130sdp"
                            android:textColor="@color/black_light"
                            android:text="Please wait to complete the transaction" />




                    </FrameLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/transaction_statusview"
                    android:visibility="visible"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:id="@+id/status_view"

                            >
                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/status_icon"
                                app:rippleColor="@color/white"
                                android:backgroundTint="@color/red"
                                android:scaleType="center"
                                app:borderWidth="0dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/animated_vector_check"
                                android:elevation="0dp"

                                />

                        </RelativeLayout>



                        <android.support.v4.widget.NestedScrollView
                            android:id="@+id/scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/status_view"
                            android:layout_marginBottom="@dimen/_48sdp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewMid"
                                    android:layout_gravity="center_horizontal"
                                    android:text="\u20B9 1234.52"
                                    android:textStyle="bold" />


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewMid"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="Request Successful" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color" />


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:gravity="center_horizontal"
                                    android:text="Thank you for your order.\n  Your order will be processed as soon as possilbe." />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_16sdp"
                                    android:layout_marginRight="@dimen/_16sdp"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:text="Requeted from"

                                        />

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:text="Test@softtech360.in" />

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:text="UPI Reference ID: 8548459562"

                                        />

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:text="3:30PM 11NOV2018"
                                        android:textColor="@color/black_light" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:alpha="0.1"
                                        android:background="@color/divider_color" />

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:id="@+id/phone_txt"
                                        android:gravity="center_horizontal"
                                        android:text="If you have any questions or enquiries please call us on: 88826543"

                                        />



                                </LinearLayout>

                            </LinearLayout>


                        </android.support.v4.widget.NestedScrollView>



                        <RelativeLayout
                            android:id="@+id/proceed_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_alignParentBottom="true"
                            android:onClick="@{handlers::backToOrder}">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sec_txt"
                                style="@style/TextViewMid"
                                android:layout_centerInParent="true"
                                android:text="Continue Order"
                                android:textColor="@color/theme_color" />

                        </RelativeLayout>


                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_transaction_status"
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_horizontal"
                            app:lottie_autoPlay="false"
                            android:layout_centerHorizontal="true"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:lottie_fileName="checked_done_.json"
                            app:lottie_loop="false"
                            />

                    </RelativeLayout>





                </RelativeLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>