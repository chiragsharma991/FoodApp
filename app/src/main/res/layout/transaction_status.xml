<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools">

    <data>


        <import type="android.view.View">

        </import>

        <variable
            name="status_is"
            type="Boolean">

        </variable>

        <variable
            name="user"
            type="dk.eatmore.foodapp.model.User">

        </variable>


        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.EditCart.MyClickHandler">

        </variable>

        <variable
            name="transactionhandler"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.TransactionStatus.MyClickHandler">

        </variable>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/transaction_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/transactionstatus_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <android.support.v7.widget.CardView
                android:id="@+id/address_card"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:animateLayoutChanges="true">

                <!--transaction progress dialog-->

                <RelativeLayout
                    android:id="@+id/processDialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="@{status_is == false ? View.VISIBLE : View.GONE}"
                    >

                    <FrameLayout
                        android:id="@+id/signup_view"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_marginTop="?attr/actionBarSize"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="true"
                            android:visibility="visible"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewMid"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:singleLine="true"
                            android:text="Loading..."
                            android:textColor="@color/black_light" />


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewSmall"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="@dimen/_130sdp"
                            android:singleLine="true"
                            android:text="Please wait to complete the transaction"
                            android:textColor="@color/black_light" />


                    </FrameLayout>


                </RelativeLayout>


                <!--transaction status view-->

                <RelativeLayout
                    android:id="@+id/transaction_statusview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="@{status_is == true ? View.VISIBLE : View.GONE}"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/status_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"

                            >

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/status_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/red"
                                android:elevation="0dp"
                                android:scaleType="fitXY"
                                app:borderWidth="0dp"
                                app:rippleColor="@color/white"

                                />

                        </RelativeLayout>


                        <android.support.v4.widget.NestedScrollView
                            android:id="@+id/scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/status_view"
                            android:layout_marginBottom="@dimen/_48sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/totalamount"
                                    style="@style/TextViewMid"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/total_amount"
                                    android:visibility="gone"
                                    android:textStyle="bold" />


                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/request_status"
                                    style="@style/TextViewMid"
                                    android:visibility="gone"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="@string/request_successful" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:visibility="gone"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color" />


                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/status_msg"
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="@string/thank_you_for_your_order_n_your_order_will_be_processed_as_soon_as_possilbe" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:alpha="0.2"
                                    android:visibility="gone"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:background="@color/divider_color" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_16sdp"
                                    android:layout_marginRight="@dimen/_16sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:visibility="gone"
                                        android:text="@string/requeted_from"

                                        />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/requested_user"
                                        style="@style/TextViewSmall"
                                        android:visibility="gone"
                                        android:text="Test@softtech360.in" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/order_number"
                                        style="@style/TextViewSmall"
                                        android:textStyle=""
                                        android:text="@string/order_number"

                                        />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/order_time"
                                        style="@style/TextViewSmall"
                                        android:text="@string/order_date"
                                        android:visibility="gone"
                                        android:textColor="@color/black_light" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:alpha="0.1"
                                        android:background="@color/divider_color" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/phone_txt"
                                        style="@style/TextViewSmall"
                                        android:gravity="center_horizontal"
                                        android:text="@string/if_you_have_any_questions_or_enquiries_please_call_us_on"
                                        />


                                </LinearLayout>

                            </LinearLayout>


                        </android.support.v4.widget.NestedScrollView>


                        <RelativeLayout
                            android:id="@+id/proceed_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:onClick="@{(v) -> transactionhandler.onClick(v,`0`)}"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_8sdp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sec_txt"
                                style="@style/TextViewMid"
                                android:layout_centerInParent="true"
                                android:text="@string/continue_order"
                                android:textColor="@color/theme_color" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_transaction_status"
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:lottie_autoPlay="false"
                            app:lottie_fileName="checked_done_.json"
                            app:lottie_loop="false" />

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>