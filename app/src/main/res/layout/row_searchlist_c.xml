<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View">

        </import>

        <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>


        <variable
            name="productlist_item"
            type="dk.eatmore.foodapp.model.home.ProductListItem">

        </variable>




    </data>

    <RelativeLayout
        android:id="@+id/rowChildItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            >

            <android.support.constraint.Guideline
                android:id="@+id/guidline_vertical_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <android.support.constraint.Guideline
                android:id="@+id/guidline_vertical_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cat_title"
                style="@style/Titlelight_TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1.05"
                app:layout_constraintBottom_toTopOf="@+id/cat_desc"
                app:layout_constraintEnd_toStartOf="@+id/guidline_vertical_one"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cat_price"
                style="@style/TitleRegular_TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:maxLength="12"
                android:gravity="right"
                android:textColor="@color/black_light"
                app:layout_constraintEnd_toStartOf="@+id/guidline_vertical_two"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/guidline_vertical_one"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cat_desc"
                style="@style/Subtitle_TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_weight="1.05"
                android:visibility="@{productlist_item.p_desc.equalsIgnoreCase(``) ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cat_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cat_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appCompatTextView2"
                style="@style/Subtitle_TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1.05"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cat_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cat_desc"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_marginStart="8dp"
                android:id="@+id/addtocart_view"
                android:background="@color/theme_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/cat_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidline_vertical_two"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/divider_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </android.support.constraint.ConstraintLayout>



    </RelativeLayout>

</layout>



