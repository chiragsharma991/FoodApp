<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <data>


    </data>


    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/address_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_1sdp"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:focusable="true">


        <RelativeLayout
            android:id="@+id/home_account_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_layout"
            android:background="@color/background_light"
            android:fitsSystemWindows="true"
            android:visibility="visible"

            >

            <!---->

            <RelativeLayout
                android:id="@+id/address_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/proceed_view"
                    android:layout_alignParentTop="true">

                    <android.support.v7.widget.CardView
                        android:id="@+id/row_order_cardview"
                        style="@style/CardViewStyle"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:padding="@dimen/_2sdp" />


                    </android.support.v7.widget.CardView>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/proceed_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.2"
                        android:background="@color/divider_color" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/sec_txt"
                        style="@style/TextViewMid"
                        android:layout_centerInParent="true"
                        android:text="Proceed"
                        android:textColor="@color/theme_color" />

                </RelativeLayout>


            </RelativeLayout>


            <!---->
            <RelativeLayout
                android:id="@+id/ragistered_address_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Name" />

                            <android.support.v7.widget.AppCompatEditText
                                style="@style/EditText_Normal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:background="@android:color/transparent"
                                android:singleLine="true"
                                android:text="Test123"
                                android:textColor="@color/black_light" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="invisible"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:alpha="0.2"
                            android:background="@color/divider_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Phone" />

                            <android.support.v7.widget.AppCompatEditText
                                style="@style/EditText_Normal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:background="@android:color/transparent"
                                android:inputType="number"
                                android:singleLine="true"
                                android:text="8754987854"
                                android:textColor="@color/black_light" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:alpha="0.2"
                            android:visibility="invisible"
                            android:background="@color/divider_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Email" />

                            <android.support.v7.widget.AppCompatEditText
                                style="@style/EditText_Normal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:background="@android:color/transparent"
                                android:inputType="textEmailAddress"
                                android:text="charisharma16@gmail.com"
                                android:textColor="@color/black_light" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:visibility="invisible"
                            android:alpha="0.2"
                            android:background="@color/divider_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Address" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/address_edt"
                                    style="@style/EditText_Normal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:background="@android:color/transparent"
                                    android:text="Test \n12 Baleshwar\nAhmedabad"
                                    android:textColor="@color/black_light" />


                            </LinearLayout>


                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical|right"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/right_arrow" />


                        </FrameLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/proceed_view_nxt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/theme_color">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/sec_txt_nxt"
                            style="@style/TextViewMid"
                            android:layout_centerInParent="true"
                            android:text="Proceed"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </FrameLayout>


</layout>

