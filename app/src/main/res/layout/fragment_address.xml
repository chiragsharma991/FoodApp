<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <data>


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        xmlns:app="http://schemas.android.com/apk/res-auto">


            <include layout="@layout/toolbar"
                    android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/_25sdp"
                >

            </include>



            <RelativeLayout
                android:id="@+id/home_account_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:fitsSystemWindows="true"
                android:layout_below="@+id/toolbar"
                android:animateLayoutChanges="true"
                android:background="@color/background_light"

                >

                <!---->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_3sdp"
                    android:id="@+id/address_list_view"
                    android:visibility="visible"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_above="@+id/proceed_view"
                        >
                        <android.support.v7.widget.CardView
                            android:id="@+id/row_order_cardview"
                            style="@style/CardViewStyle"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view_address"
                                android:padding="@dimen/_2sdp"
                                android:clipToPadding="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </android.support.v7.widget.CardView>

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/proceed_view"
                        android:layout_alignParentBottom="true"
                        >
                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.2"
                            android:background="@color/divider_color"
                            />

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewMid"
                            android:id="@+id/sec_txt"
                            android:text="Proceed"
                            android:layout_centerInParent="true"
                            android:textColor="@color/theme_color"
                            />

                    </RelativeLayout>



                </RelativeLayout>



                <!---->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ragistered_address_view"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_3sdp"
                    >

                    <android.support.v7.widget.CardView style="@style/CardViewStyle"

                        >


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_48sdp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:layout_height="wrap_content"
                                        android:layout_width="0dp"
                                        android:text="Name"
                                        android:layout_weight="0.5"
                                        />

                                    <android.support.v7.widget.AppCompatEditText
                                        style="@style/EditText_Normal"
                                        android:text="Test123"
                                        android:layout_height="wrap_content"
                                        android:layout_width="0dp"
                                        android:singleLine="true"
                                        android:background="@android:color/transparent"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black_light"
                                        />

                                </LinearLayout>

                                <View
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:layout_height="wrap_content"
                                        android:layout_width="0dp"
                                        android:text="Phone"
                                        android:layout_weight="0.5"
                                        />

                                    <android.support.v7.widget.AppCompatEditText
                                        style="@style/EditText_Normal"
                                        android:text="8754987854"
                                        android:singleLine="true"
                                        android:layout_height="wrap_content"
                                        android:layout_width="0dp"
                                        android:inputType="number"
                                        android:background="@android:color/transparent"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black_light"
                                        />

                                </LinearLayout>

                                <View
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatTextView
                                        style="@style/TextViewSmall"
                                        android:layout_height="wrap_content"
                                        android:layout_width="0dp"
                                        android:text="Email"
                                        android:layout_weight="0.5"
                                        />

                                    <android.support.v7.widget.AppCompatEditText
                                        style="@style/EditText_Normal"
                                        android:text="charisharma16@gmail.com"
                                        android:layout_height="wrap_content"
                                        android:layout_width="0dp"
                                        android:inputType="textEmailAddress"
                                        android:background="@android:color/transparent"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black_light"
                                        />

                                </LinearLayout>

                                <View
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                >
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextViewSmall"
                                            android:layout_height="wrap_content"
                                            android:layout_width="0dp"
                                            android:text="Address"
                                            android:layout_weight="0.5"
                                            />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/EditText_Normal"
                                            android:id="@+id/address_edt"
                                            android:text="Test \n12 Baleshwar\nAhmedabad"
                                            android:layout_height="wrap_content"
                                            android:layout_width="0dp"
                                            android:background="@android:color/transparent"
                                            android:layout_weight="1.5"
                                            android:textColor="@color/black_light"
                                            />


                                    </LinearLayout>


                                    <android.support.v7.widget.AppCompatImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center_vertical|right"
                                        app:srcCompat="@drawable/right_arrow"
                                        />



                                </FrameLayout>



                            </LinearLayout>





                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:id="@+id/proceed_view_nxt"
                            android:layout_gravity="bottom"
                            android:background="@color/theme_color"
                            >


                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewMid"
                                android:id="@+id/sec_txt_nxt"
                                android:text="Proceed"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                />

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>



                </RelativeLayout>



            </RelativeLayout>







    </RelativeLayout>






</layout>

