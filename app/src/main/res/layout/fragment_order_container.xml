<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="ui_order"
            type="dk.eatmore.foodapp.model.order.UI_OrderFragment">

        </variable>


    </data>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >




        <FrameLayout
            android:id="@+id/home_order_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/appbar"
                    >
                    <include layout="@layout/toolbar"
                        >

                    </include>

                </android.support.design.widget.AppBarLayout>
                <android.support.v4.widget.SwipeRefreshLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/swipeRefresh"
                    android:layout_below="@+id/appbar"
                    android:backgroundTint="@color/theme_color"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:clipToPadding="false"
                                android:paddingTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:id="@+id/empty_view"
                            android:visibility="visible"
                            >
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/imageview"
                                app:srcCompat="@mipmap/no_order_found"
                                android:layout_centerInParent="true"
                                />


                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:id="@+id/error_txt"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageview"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Your cart is empty. Add something from the menu"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black_default"

                                />





                        </RelativeLayout>


                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="?android:attr/progress"
                            android:visibility="gone"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_centerInParent="true"
                            android:indeterminate="true" />

                        <android.support.v7.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:id="@+id/swipetorefresh_view"
                            android:visibility="visible"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_24sdp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="@dimen/_16sdp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                >
                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_height="wrap_content"
                                    android:text="Pull to refresh"
                                    android:textColor="@color/black_default"
                                    android:layout_centerInParent="true"

                                    />
                            </RelativeLayout>




                        </android.support.v7.widget.CardView>



                    </FrameLayout>


                </android.support.v4.widget.SwipeRefreshLayout>


            </RelativeLayout>





        </FrameLayout>

    </RelativeLayout>






</layout>

