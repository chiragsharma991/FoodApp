<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>

        <import type="android.view.View">

        </import>

        <variable
            name="restaurant"
            type="dk.eatmore.foodapp.model.home.Restaurant">

        </variable>

        <variable
            name="handler"
            type="dk.eatmore.foodapp.fragment.ProductInfo.DetailsFragment.MyClickHandler"
            >

        </variable>

        <variable
            name="is_uiprogress"
            type="Boolean">

        </variable>

        <variable
            name="kstatus"
            type="Boolean">

        </variable>

    </data>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/detail_container"
        android:fitsSystemWindows="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/background_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapse_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true"
                        app:contentScrim="@color/white"
                        app:expandedTitleMarginStart="24dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                        app:titleEnabled="false">



                        <ImageView
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/theme_color"
                            android:src="@mipmap/pizza_img"
                            android:fitsSystemWindows="true"
                            android:scaleType="centerCrop"
                            android:scaleY="1.5"
                            android:scaleX="1.5"
                            app:layout_collapseMode="parallax" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/theme_color"
                            android:fitsSystemWindows="true"
                            android:scaleType="centerCrop"
                            app:layout_collapseMode="parallax" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:id="@+id/detail_item_info"

                            >


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_48sdp"
                                android:layout_marginBottom="@dimen/_56sdp"

                                >

                                <android.support.constraint.Guideline
                                    android:id="@+id/guidelineone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.30" />


                                <android.support.constraint.Guideline
                                    android:id="@+id/guidelinetwo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.90" />


                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/imageview"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:scaleType="fitXY"
                                    android:elevation="@dimen/_16sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/guidelineone"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/textView"
                                    style="@style/TitleMidium_TextViewMid"
                                    android:singleLine="false"
                                    android:text="@{restaurant.restaurant_name}"
                                    android:layout_width="0dp"
                                    android:textColor="@color/white"
                                    app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/guidelineone"
                                    app:layout_constraintTop_toTopOf="@+id/imageview" />


                                <TextView
                                    android:id="@+id/textView2"
                                    style="@style/Subtitle_TextViewSmall"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@{restaurant.cuisines}"
                                    android:textColor="@color/white"
                                    android:layout_width="0dp"
                                    app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/guidelineone"
                                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                                <RatingBar
                                    android:id="@+id/rating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="8dp"
                                    android:progressTint="@color/yello"
                                    android:secondaryProgressTint="@color/yello"
                                    android:isIndicator="true"
                                    android:numStars="6"
                                    android:visibility="@{is_uiprogress ? View.GONE : View.VISIBLE}"
                                    android:rating="@{restaurant.total_rating}"
                                    android:stepSize="0.0"
                                    app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/guidelineone"
                                    app:layout_constraintTop_toBottomOf="@+id/textView2" />


                                <TextView
                                    android:id="@+id/textView3"
                                    style="@style/Subtitle_TextViewSmall"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="8dp"
                                    android:text="@{@string/restaurant_rating(restaurant.total_review_count)}"
                                    android:onClick="@{handler::tapOnRating}"
                                    android:visibility="@{is_uiprogress ? View.GONE : View.VISIBLE}"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/ubuntu_m"
                                    app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/guidelineone"
                                    app:layout_constraintTop_toBottomOf="@+id/rating" />



                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/favorite_btn"
                                    android:layout_width="@dimen/_28sdp"
                                    android:layout_height="@dimen/_26sdp"
                                    android:onClick="@{handler :: taponfavourite}"
                                    android:layout_centerHorizontal="true"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:padding="@dimen/_5sdp"
                                    android:scaleType="fitXY"
                                    android:visibility="@{kstatus ? View.VISIBLE : View.GONE}"
                                    android:tint="@color/white"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/guidelinetwo"
                                    app:layout_constraintTop_toTopOf="@+id/textView" />




                            </android.support.constraint.ConstraintLayout>


                        </LinearLayout>



                        <!--

                                        <include layout="@layout/toolbar_plusone"
                                            android:layout_width="match_parent"
                                            android:layout_height="?attr/actionBarSize"
                                            app:layout_collapseMode="pin"
                                            android:layout_gravity="top"
                                            android:visibility="gone"
                                            >

                                        </include>
                        -->



                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:id="@+id/gradient_toptobottom"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/gradient_topto_bottom"
                            app:layout_constraintBottom_toTopOf="@+id/appCompatImageView_overlay_white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />




                        <android.support.v7.widget.Toolbar
                            android:id="@+id/anim_toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:layout_collapseMode="pin"
                            app:contentInsetLeft="0dp"
                            app:contentInsetStart="0dp"
                            app:contentInsetRight="0dp"
                            app:contentInsetEnd="0dp"
                            android:layout_marginBottom="@dimen/_56sdp"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                            >

                            <RelativeLayout
                                android:id="@+id/toolbarRel_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical">





                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/img_toolbar_back"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/_8sdp"
                                    app:srcCompat="@drawable/close"
                                    android:tint="@color/white"
                                    android:visibility="visible"
                                    />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/txt_toolbar"
                                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                    android:layout_width="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:includeFontPadding="false"
                                    android:layout_height="wrap_content"
                                    android:maxLength="18"
                                    android:ellipsize="end"
                                    android:layout_toEndOf="@+id/img_toolbar_back"
                                    android:fontFamily="@font/hindvadodara_medium"
                                    android:textColor="@color/black"
                                    />


                                <RelativeLayout
                                    android:id="@+id/toolbar_badge_view"
                                    android:layout_width="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_toEndOf="@+id/txt_toolbar"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    >
                                    <RelativeLayout
                                        android:id="@+id/viewcart"
                                        android:layout_width="wrap_content"
                                        android:alpha="0.9"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:layout_marginEnd="@dimen/_10sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:elevation="@dimen/_5sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_height="wrap_content">
                                        <android.support.v7.widget.AppCompatImageView
                                            android:id="@+id/addtocart_bascket"
                                            android:layout_width="20dip"
                                            android:layout_height="20dip"
                                            app:srcCompat="@mipmap/basketwhite"
                                            />

                                        <android.support.v7.widget.AppCompatTextView
                                            style="@style/TextViewSmall"
                                            android:id="@+id/badge_countprice"
                                            android:layout_toEndOf="@+id/addtocart_bascket"
                                            android:fontFamily="@font/hindvadodara_regular"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:layout_centerVertical="true"
                                            android:text="00 |00.00 kr"
                                            android:textColor="@color/white" />
                                    </RelativeLayout>
                                    <TextView
                                        android:id="@+id/badge_notification_txt"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_alignRight="@id/viewcart"
                                        android:background="@drawable/item_count"
                                        android:text="21"
                                        android:elevation="@dimen/_5sdp"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:visibility="gone"
                                        android:textColor="#FFF"
                                        android:textSize="7sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>






                            </RelativeLayout>




                        </android.support.v7.widget.Toolbar>


                        <android.support.design.widget.TabLayout
                            android:id="@+id/tabs"
                            android:fitsSystemWindows="true"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            app:layout_collapseMode="pin"
                            app:tabTextAppearance="@style/tab_text"
                            app:tabIndicatorColor="@color/theme_color"
                            app:tabSelectedTextColor="@color/theme_color"
                            app:tabTextColor="@color/black_txt_regular"/>












                    </android.support.design.widget.CollapsingToolbarLayout>

                </android.support.design.widget.AppBarLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:id="@+id/testview"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        >
                        <!--    <android.support.design.widget.TabLayout
                                android:id="@+id/tabs"
                                android:fitsSystemWindows="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                app:layout_collapseMode="pin"
                                app:tabTextAppearance="@style/tab_text"
                                app:tabIndicatorColor="@color/theme_color"
                                app:tabSelectedTextColor="@color/theme_color"
                                app:tabTextColor="@color/black_txt_regular"/>

                -->


                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager"
                                android:layout_width="match_parent"
                                android:fitsSystemWindows="true"
                                android:layout_height="match_parent"
                                />




                    </RelativeLayout>















        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progress_bar_layout"
            android:background="@color/white"
            android:visibility="@{is_uiprogress ? View.VISIBLE : View.GONE}"
            >

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true" />


        </RelativeLayout>




    </android.support.design.widget.CoordinatorLayout>

</layout>


