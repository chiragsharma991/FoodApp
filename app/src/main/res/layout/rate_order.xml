<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data
        >


    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rate_container"
        android:fitsSystemWindows="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/background_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.NoActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_48sdp"
                    android:id="@+id/detail_item_info"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/subtxt_toolbar"
                            android:layout_width="wrap_content"
                            android:includeFontPadding="false"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_marginEnd="@dimen/_14sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:text="Havordan var din oplevelse?"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:textColor="@color/black"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:visibility="visible"
                            />
                    </LinearLayout>



                </LinearLayout>


                <include layout="@layout/toolbar"
                    >

                </include>

            <!--    <include layout="@layout/toolbar_plusone"
                    >

                </include>-->





            </android.support.design.widget.CollapsingToolbarLayout>





        </android.support.design.widget.AppBarLayout>


        <RelativeLayout
            android:id="@+id/category_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:fitsSystemWindows="true"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_16sdp"
                    >


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Titlelight_TextViewSmall"
                        android:id="@+id/ordered_item_name"
                        android:singleLine="true"
                        android:text="Kavalitet"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        >

                        <RatingBar
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:id="@+id/quality_of_food_rating"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="6"
                            android:rating="0"
                            android:stepSize="1" />

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Subtitle_TextViewSmall"
                            android:id="@+id/qty_remark"
                            android:layout_toEndOf="@+id/quality_of_food_rating"
                            android:singleLine="true"

                            android:textColor="@color/theme_color"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_16sdp"
                            />



                    </RelativeLayout>



                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Titlelight_TextViewSmall"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Kundeservice"
                        />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        >

                        <RatingBar
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="6"
                            android:id="@+id/customer_service_rating"
                            android:rating="0"
                            android:stepSize="1" />

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Subtitle_TextViewSmall"
                            android:id="@+id/customer_service_remark"
                            android:layout_toEndOf="@+id/customer_service_rating"
                            android:singleLine="true"
                            android:textColor="@color/theme_color"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_16sdp"
                            />



                    </RelativeLayout>




                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Titlelight_TextViewSmall"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Leveringstid"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        >


                        <RatingBar
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:id="@+id/delivery_time_rating"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="6"
                            android:rating="0"
                            android:stepSize="1" />

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Subtitle_TextViewSmall"
                            android:id="@+id/delivery_time_remark"
                            android:layout_toEndOf="@+id/delivery_time_rating"
                            android:singleLine="true"
                            android:textColor="@color/theme_color"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_16sdp"
                            />



                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Titlelight_TextViewSmall"
                        android:singleLine="true"
                        android:text="Leveringstid"
                        android:layout_marginTop="@dimen/_8sdp"
                        />


                    <android.support.v7.widget.AppCompatEditText
                        style="@style/EditText_Normal"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/comment_edt"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_width="match_parent"
                        android:inputType="textCapSentences|textMultiLine|textEmailAddress"
                        android:gravity="top|start"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:lines="5"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:hint="Write something here"
                        android:background="@drawable/rectangle_edittext"
                        android:textColor="@color/black_light"
                        android:layout_marginTop="@dimen/_8sdp"
                        />



                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/rate_btn"
                        android:layout_marginTop="@dimen/_16sdp"
                        style="@style/Button"
                        android:text="@string/rate"
                        android:textColor="@color/white"
                        />


                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>



        </RelativeLayout>




    </android.support.design.widget.CoordinatorLayout>

</layout>


