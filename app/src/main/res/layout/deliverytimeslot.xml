<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <import type="android.view.View"/>

        <variable
            name="is_loading"
            type="Boolean">

        </variable>

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/address_container"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/white"
        >


        <RelativeLayout
            android:id="@+id/home_account_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:fitsSystemWindows="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_below="@+id/toolbar_layout"

            >

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        >

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/confirm_delivery_time"
                            style="@style/TextViewLarge"
                            android:layout_centerInParent="true"
                            android:text="Confirm delivery time"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/delivery_time"
                            style="@style/TextViewMid"
                            android:layout_centerInParent="true"
                            android:text="Delivery time"
                            android:textColor="@color/black_light"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/confirm_delivery_time" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/delivery_time_slot"
                            style="@style/TextViewSmall"
                            android:layout_width="match_parent"
                            android:padding="@dimen/_8sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rectangle_edittext"
                            android:textColor="@color/black_light"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/delivery_time" />


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/comment"
                            style="@style/TextViewMid"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="16dp"
                            android:text="Comment"
                            android:textColor="@color/black_light"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/delivery_time_slot" />


                        <android.support.v7.widget.AppCompatEditText
                            style="@style/EditText_Normal"
                            android:id="@+id/comment_edt"
                            android:padding="@dimen/_5sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_width="match_parent"
                            android:maxLines="5"
                            android:inputType="textCapSentences|textMultiLine"
                            android:gravity="top|start"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:lines="5"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:hint="e.g., no onion,extra garlic,etx"
                            android:background="@drawable/rectangle_edittext"
                            android:layout_weight="1.5"
                            android:textColor="@color/black_light"
                            app:layout_constraintTop_toBottomOf="@+id/comment"
                            android:layout_marginTop="@dimen/_8sdp"
                            />


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/demotxt"
                            style="@style/TextViewSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="16dp"
                            android:visibility="invisible"
                            android:layout_marginBottom="16dp"
                            android:text="Allerry and diet information"
                            android:textColor="@color/theme_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/comment_edt" />


                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/secure_payment_btn"
                            android:layout_marginTop="@dimen/_16sdp"
                            style="@style/Button"
                            android:enabled="@{!is_loading}"
                            android:text="@string/go_to_payment"
                            android:alpha="@{is_loading ?  0.6f : 1.0f }"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/demotxt"
                            />

                        <include
                            android:id="@+id/progressbar_x"
                            layout="@layout/progressbar_x"
                            android:layout_width="wrap_content"
                            android:visibility="@{is_loading ?  View.VISIBLE : View.GONE }"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/delivery_time_slot"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/delivery_time_slot"
                            />


                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="8dp"
                            android:visibility="@{is_loading ?  View.GONE : View.VISIBLE }"
                            app:srcCompat="@drawable/down_arrow"
                            app:layout_constraintBottom_toBottomOf="@+id/delivery_time_slot"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/delivery_time_slot"
                            />




                    </android.support.constraint.ConstraintLayout>


            </android.support.v4.widget.NestedScrollView>









        </RelativeLayout>







    </FrameLayout>






</layout>

