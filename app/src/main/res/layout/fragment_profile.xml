<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <data>


        <variable
            name="xml_profile"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Account.Profile.UI_Profile"
            >

        </variable>

        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Account.Profile.MyClickHandler">

        </variable>

    </data>


    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:background="@color/background_light"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:elevation="0dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="@{xml_profile.userName}"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="@{xml_profile.email}"
                                    android:textColor="@color/black_light"
                                    />
                          <!--      <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text=""
                                    android:textColor="@color/black_light"
                                    />
-->

                            </LinearLayout>


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:elevation="0dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:id="@+id/profile_info_txt"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Profile Info"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:id="@+id/gift_card_txt"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="GaveKort"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color"
                                />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:id="@+id/health_report"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Health Report"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color"
                                />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:id="@+id/terms_of_services"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Terms of Services"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color"
                                />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:id="@+id/Opening_hours"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Opening Hours"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>



                        </LinearLayout>





                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewSmall"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="APP INFO"
                            />


                    </LinearLayout>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Fjgi jrr"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:background="@color/divider_color"
                                />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Reset App"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>



                        </LinearLayout>





                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:elevation="0dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:onClick="@{handlers::signout}"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewSmall"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Sign out"
                                    android:textColor="@color/black_light"
                                    />


                            </LinearLayout>


                        </LinearLayout>





                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewSmall"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="App version 2018.07.13.release"
                            android:textColor="@color/black_light"
                            />


                    </LinearLayout>



                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>


    </FrameLayout>






</layout>

