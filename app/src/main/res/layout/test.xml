<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>


        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.Paymentmethod.MyClickHandler">

        </variable>

    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:id="@+id/constraint"

        >



        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/theme_color"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/cash_payment"
            app:layout_constraintTop_toTopOf="@+id/cash_payment">

        </View>

        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/theme_color"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/online_payment"
            app:layout_constraintTop_toTopOf="@+id/online_payment">

        </View>

        <RelativeLayout
            android:id="@+id/online_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{(v) -> handlers.onClick(v,`11`)}"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/online_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside">


            <android.support.v7.widget.AppCompatTextView
                style="@style/TitleMidiumlight_TextViewMid"
                android:singleLine="true"
                android:text="@string/online_payment" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/online_rht_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/down_arrow" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/online_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/view_online"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/online_payment">


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/online_payment_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />


        </LinearLayout>

        <View
            android:id="@+id/view_online"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.2"
            android:background="@color/divider_color"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/apply_giftcard_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/online_img" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/apply_giftcard_txt"
            style="@style/Subtitle_TextViewSmall"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{(v) -> handlers.onClick(v,`12`)}"
            android:text="@string/apply_coupon"
            android:textColor="@color/green"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_online" />



        <LinearLayout
            android:id="@+id/giftonline_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle_edittext"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply_giftcard_txt">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/applyonlinegift_edt"
                style="@style/EditText_Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="0.8"
                android:background="@drawable/rectangle_edittext"
                android:hint="Enter your postal code"
                android:inputType="textCapCharacters"
                android:lines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                >

            </android.support.v7.widget.AppCompatEditText>

            <LinearLayout
                android:id="@+id/applyonlinegift_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@color/grey"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{(v) -> handlers.onClick(v,`13`)}">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/applyonline_txt"
                    style="@style/TextViewSmall"
                    android:fontFamily="@font/ubuntu_l"
                    android:text="@string/apply"
                    android:visibility="visible"

                    />

                <include
                    android:id="@+id/progress_applyonlinegift"
                    layout="@layout/progressbar_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </include>

            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/error_of_onlinegiftcard"
            style="@style/Subtitle_TextViewSmall"
            android:layout_height="22dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="code is not valid"
            android:textColor="@color/theme_color"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/view_giftonline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftonline_view" />


        <View
            android:id="@+id/view_giftonline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.2"
            android:background="@color/divider_color"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/online_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/error_of_onlinegiftcard" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/online_btn"
            style="@style/Button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/theme_color"
            android:onClick="@{(v) -> handlers.onClick(v,`14`)}"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_giftonline"
            />


        <android.support.constraint.Group
            android:id="@+id/online_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="online_img,apply_giftcard_txt,online_btn" />


        <!--*******-->

        <RelativeLayout
            android:id="@+id/cash_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{(v) -> handlers.onClick(v,`21`)}"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/online_btn">

            <android.support.v7.widget.AppCompatTextView
                style="@style/TitleMidiumlight_TextViewMid"
                android:singleLine="true"
                android:text="@string/cash_payment" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/cash_rht_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/down_arrow" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/cash_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cash_payment">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/cash_payment_icon"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />


        </LinearLayout>

        <View
            android:id="@+id/view_cash"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.2"
            android:background="@color/divider_color"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cash_img" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/apply_cash_giftcard_txt"
            style="@style/Subtitle_TextViewSmall"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{(v) -> handlers.onClick(v,`22`)}"
            android:text="@string/apply_coupon"
            android:textColor="@color/green"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_cash" />


        <LinearLayout
            android:id="@+id/giftcash_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle_edittext"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply_cash_giftcard_txt">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/applycashgift_edt"
                style="@style/EditText_Normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rectangle_edittext"
                android:hint="Enter your postal code"
                android:inputType="textCapCharacters"
                android:lines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall">

            </android.support.v7.widget.AppCompatEditText>

            <LinearLayout
                android:id="@+id/applycashgift_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{(v) -> handlers.onClick(v,`23`)}">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/applycash_txt"
                    style="@style/TextViewSmall"
                    android:fontFamily="@font/ubuntu_l"
                    android:text="@string/apply"
                    android:visibility="visible"

                    />

                <include
                    android:id="@+id/progress_applycashgift"
                    layout="@layout/progressbar_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </include>


            </LinearLayout>


        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/error_of_cashgiftcard"
            style="@style/Subtitle_TextViewSmall"
            android:layout_height="22dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="code is not valid"
            android:textColor="@color/theme_color"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/view_cashgift"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftcash_view" />


        <View
            android:id="@+id/view_cashgift"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.2"
            android:background="@color/divider_color"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/error_of_cashgiftcard" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cash_btn"
            style="@style/Button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/theme_color"
            android:onClick="@{(v) -> handlers.onClick(v,`24`)}"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_cashgift"
            tools:targetApi="lollipop"/>

        <android.support.constraint.Group
            android:id="@+id/cash_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="cash_img,apply_cash_giftcard_txt,cash_btn" />





    </android.support.constraint.ConstraintLayout>


</layout>







