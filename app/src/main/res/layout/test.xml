<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/background_light"
        >

        <!--    <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_bar"
                >-->
        <include layout="@layout/toolbar">

        </include>

        <!--</android.support.design.widget.AppBarLayout>-->


        <FrameLayout
            android:id="@+id/epay_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_layout"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_1sdp"

                >
                <dk.eatmore.foodapp.utils.ZigzagView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    app:zigzagBackgroundColor="#8bc34a"
                    app:zigzagElevation="8dp"
                    app:zigzagHeight="10dp"
                    android:layout_margin="@dimen/_80sdp"
                    app:zigzagShadowAlpha="0.9"
                    app:zigzagSides="top|bottom"
                    app:zigzagPaddingContent="16dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        >

                    </LinearLayout>

                </dk.eatmore.foodapp.utils.ZigzagView>



            </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>

</layout>