<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:bind="http://schemas.android.com/apk/res/android"

    >

    <data>

        <variable
            name="user"
            type="dk.eatmore.foodapp.model.User">

        </variable>


        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.EditCart.MyClickHandler">

        </variable>

    </data>


    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:background="@color/background_light"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@color/background_light"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_card_view"
                        android:visibility="visible"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/total_pay_rel"
                            >
                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewMid"
                                android:singleLine="true"
                                android:layout_centerVertical="true"
                                android:text="Pay \u20B9 1234.52"
                                />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:text="Details"
                                android:layout_marginRight="@dimen/_1sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/theme_color"
                                android:layout_alignParentRight="true"
                                />


                        </RelativeLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_below="@+id/total_pay_rel"
                            android:orientation="vertical">



                            <android.support.v7.widget.CardView
                                android:id="@+id/address_card"
                                style="@style/CardViewStyle"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                >


                                <LinearLayout
                                    android:id="@+id/signup_view"
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:layout_marginTop="?attr/actionBarSize"
                                    android:orientation="vertical"
                                    android:visibility="visible">


                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/input_layout_email"
                                        android:layout_width="match_parent"
                                        app:errorTextAppearance="@style/error_appearance"
                                        android:layout_height="wrap_content">


                                        <com.bambora.nativepayment.widget.edittext.CardNumberEditText
                                            android:id="@+id/card_number_edt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:focusable="true"
                                            android:focusedByDefault="true"
                                            android:imeOptions="actionNext"
                                            android:hint="CARD NUMBER"
                                            android:fontFamily="@font/hindvadodara_medium"
                                            android:backgroundTint="@color/gray"
                                            android:textAppearance="?android:attr/textAppearanceSmall"

                                            />




                                    </android.support.design.widget.TextInputLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2"
                                        >
                                        <android.support.design.widget.TextInputLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/error_appearance"
                                            android:layout_weight="1"
                                            >

                                            <!--  <EditText
                                                  android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:singleLine="true"
                                                  android:backgroundTint="@color/gray"
                                                  android:fontFamily="@font/hindvadodara_medium"
                                                  android:hint="VALID THRU (MM/YY)"
                                                  android:inputType="number"
                                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                                  />
      -->
                                            <com.bambora.nativepayment.widget.edittext.ExpiryDateEditText
                                                android:id="@+id/expiry_date_edt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="VALID THRU (MM/YY)"
                                                android:fontFamily="@font/hindvadodara_medium"
                                                android:imeOptions="actionNext"
                                                android:backgroundTint="@color/gray"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                />


                                        </android.support.design.widget.TextInputLayout>


                                        <android.support.design.widget.TextInputLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/error_appearance"
                                            android:layout_weight="1"
                                            >
                                            <com.bambora.nativepayment.widget.edittext.SecurityCodeEditText
                                                android:id="@+id/security_code_edt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="CVV"
                                                android:nextFocusDown="@id/name_on_card"
                                                android:fontFamily="@font/hindvadodara_medium"
                                                android:backgroundTint="@color/gray"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                />


                                        </android.support.design.widget.TextInputLayout>

                                    </LinearLayout>



                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/input_layout_password"
                                        android:layout_width="match_parent"
                                        app:errorTextAppearance="@style/error_appearance"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            android:id="@+id/name_on_card"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/gray"
                                            android:singleLine="true"
                                            android:imeOptions="actionDone"
                                            android:fontFamily="@font/hindvadodara_medium"
                                            android:hint="NAME ON CARD"
                                            android:inputType="textPersonName"
                                            android:textAppearance="?android:attr/textAppearanceSmall" />

                                    </android.support.design.widget.TextInputLayout>



                                    <android.support.v7.widget.AppCompatCheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Securely save card details"
                                        android:id="@+id/security_check"
                                        android:textColor="@color/black_light"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        />


                                    <android.support.v7.widget.AppCompatButton
                                        android:id="@+id/secure_payment_btn"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        style="@style/Button"
                                        android:text="Proceed to payment"
                                        android:textColor="@color/white"
                                        android:alpha="0.5"
                                        />




                                </LinearLayout>


                            </android.support.v7.widget.CardView>

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/processDialog"
                        android:visibility="gone"
                        >
                        <include
                            layout="@layout/transaction_process"
                            bind:handlers="@{handlers}"
                            >

                        </include>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/transaction_status"
                        android:visibility="gone"
                        >
                        <include
                            layout="@layout/transaction_status"
                            bind:handlers="@{handlers}"
                            >

                        </include>

                    </RelativeLayout>


                </RelativeLayout>







        </RelativeLayout>



    </FrameLayout>






</layout>

