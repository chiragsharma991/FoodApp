<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="user"
            type="dk.eatmore.foodapp.model.User">

        </variable>

        <variable
            name="handler"
            type="dk.eatmore.foodapp.adapter.universalAdapter.RecyclerClickInterface" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> handler.onClick(user)}"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"

            >

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextViewSmall"
                android:id="@+id/fst_txt"
                android:layout_gravity="center_vertical"
                android:text="@{user.name}"
                android:singleLine="true"
                />
            <android.support.v7.widget.AppCompatTextView
                style="@style/TextViewSmall"
                android:id="@+id/sec_txt"
                android:layout_below="@+id/fst_txt"
                android:layout_gravity="center_vertical"
                android:text="Bricks Ashfishtan"
                android:singleLine="true"
                android:textColor="@color/black_light"
                />
            <android.support.v7.widget.AppCompatTextView
                style="@style/TextViewSmall"
                android:id="@+id/third_txt"
                android:layout_below="@+id/sec_txt"
                android:layout_gravity="center_vertical"
                android:text="kobrequeta."
                android:singleLine="true"
                android:textColor="@color/black_light"
                />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />


        </RelativeLayout>



        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="@color/divider_color"
            />




    </LinearLayout>

</layout>


