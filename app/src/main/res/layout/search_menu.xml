<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="@color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardBackgroundColor="@color/white"
                    android:transitionName="@string/transition_string"
                    android:id="@+id/search_card"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_alignParentBottom="true"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:gravity="center_vertical"
                        >

                        <dk.eatmore.foodapp.utils.CustomEditText
                            android:id="@+id/search_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:focusable="true"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/white"
                            android:drawableLeft="@drawable/back"
                            android:drawablePadding="@dimen/_8sdp"
                            android:drawableRight="@drawable/cancel"
                            android:drawableTint="@color/black_default"
                            android:fontFamily="@font/hindvadodara_medium"
                            android:hint="@string/search_the_menu"
                            android:lines="1"
                            android:layout_margin="@dimen/_4sdp"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceSmall" />




                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </RelativeLayout>





        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:clipToPadding="false"
            android:layout_below="@+id/appbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >


            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/clayout_crt"
                >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/cart_container"
                            >

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view_parent"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>



                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/error_txt"
                                style="@style/TextViewSmall"
                                android:layout_height="wrap_content"
                                android:text="@string/please_search_the_item"
                                android:textColor="@color/black_default"
                                android:layout_gravity="center_horizontal|center_vertical"

                                />


                        </FrameLayout>



                    </LinearLayout>







            </android.support.design.widget.CoordinatorLayout>


        </FrameLayout>





    </LinearLayout>

</layout>



