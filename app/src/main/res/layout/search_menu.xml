<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                android:background="@color/white"
                app:contentScrim="@android:color/white"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                >





                <RelativeLayout
                    android:id="@+id/toolbarRel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_toolbar_back"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/back"
                        android:visibility="visible"
                        />



                    <dk.eatmore.foodapp.utils.CustomEditText
                        android:id="@+id/search_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:layout_toEndOf="@+id/img_toolbar_back"
                        android:drawablePadding="@dimen/_8sdp"
                        android:layout_toStartOf="@+id/cancel_button"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/hindvadodara_light"
                        android:hint="@string/search_the_menu"
                        android:lines="1"
                        android:singleLine="true"
                        android:textAppearance="?android:textAppearanceSmall" />



                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/cancel_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/cancel"
                        android:tint="@color/black_default"
                        android:visibility="visible"
                        android:layout_alignParentRight="true"
                        />




                </RelativeLayout>






            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:clipToPadding="false"
            android:layout_below="@+id/appbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >


            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/clayout_crt"
                >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/cart_container"
                            >

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view_parent"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>



                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/error_txt"
                                style="@style/TextViewSmall"
                                android:layout_height="wrap_content"
                                android:text="@string/please_search_the_item"
                                android:textColor="@color/black_default"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:visibility="gone"
                                />


                        </FrameLayout>



                    </LinearLayout>







            </android.support.design.widget.CoordinatorLayout>


        </FrameLayout>





    </RelativeLayout>

</layout>



