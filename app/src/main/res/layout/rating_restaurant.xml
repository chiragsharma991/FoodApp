<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:zhy="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>

        <variable name="util"
            type="dk.eatmore.foodapp.utils.BindDataUtils"/>


        <variable
            name="restaurant"
            type="dk.eatmore.foodapp.model.home.Restaurant">

        </variable>


        <variable
            name="handler"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Home.ProductInfo.Rating.MyClickHandler" />



    </data>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:visibility="visible"
            android:background="@color/divider_color"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TitleMidiumlight_TextViewMid"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@{@string/user_have_reviewed(restaurant.total_review_count)}"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Titlelight_TextViewSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/samlet"
                        />


                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="6"
                        android:rating="@{restaurant.total_rating}"
                        android:stepSize="0.0" />


                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/divider_color"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/kvalitet"
                        />


                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="6"
                        android:rating="@{restaurant.quality_of_food_ratiing}"
                        android:stepSize="0.0" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/kundeservice"
                        />


                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="6"
                        android:rating="@{restaurant.customer_service_ratiing}"
                        android:stepSize="0.0" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/leveringstid"
                        />


                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="6"
                        android:rating="@{restaurant.delivery_time_ratiing}"
                        android:stepSize="0.0" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:text="6"
                        android:layout_marginBottom="@dimen/_1sdp"
                        />


                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:id="@+id/rating_line"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:alpha="0.2"
                            android:background="@color/divider_color">

                        </View>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:id="@+id/view06"
                            android:layout_calculatewidth="@{restaurant.rating_details.get(0).rate_per}"
                            android:background="@color/theme_color"

                            >

                        </View>

                    </RelativeLayout>




                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"

                        android:isIndicator="true"
                        android:numStars="1"
                        android:rating="3"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:stepSize="0.0" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:text="@{@string/percent(String.valueOf(restaurant.rating_details.get(0).rate_per))}"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:text="5"
                        android:layout_marginEnd="@dimen/_8sdp"
                        />

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/divider_color"

                            >

                        </View>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/theme_color"
                            android:layout_calculatewidth="@{restaurant.rating_details.get(1).rate_per}"
                            >

                        </View>

                    </RelativeLayout>




                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:isIndicator="true"
                        android:numStars="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:rating="3"
                        android:stepSize="0.0" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:text="@{@string/percent(String.valueOf(restaurant.rating_details.get(1).rate_per))}"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="4"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        />

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/divider_color"

                            >

                        </View>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/theme_color"
                            android:layout_calculatewidth="@{restaurant.rating_details.get(2).rate_per}"
                            >

                        </View>

                    </RelativeLayout>




                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:isIndicator="true"
                        android:numStars="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:rating="3"
                        android:stepSize="0.0" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:text="@{@string/percent(String.valueOf(restaurant.rating_details.get(2).rate_per))}"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="3"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        />

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="horizontal"

                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/divider_color"

                            >

                        </View>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/theme_color"
                            android:layout_calculatewidth="@{restaurant.rating_details.get(3).rate_per}"
                            >

                        </View>

                    </RelativeLayout>




                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:rating="3"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:stepSize="0.0" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:text="@{@string/percent(String.valueOf(restaurant.rating_details.get(3).rate_per))}"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:text="2"
                        android:layout_marginEnd="@dimen/_8sdp"
                        />

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/divider_color"

                            >

                        </View>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/theme_color"
                            android:layout_calculatewidth="@{restaurant.rating_details.get(4).rate_per}"
                            >

                        </View>

                    </RelativeLayout>




                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:isIndicator="true"
                        android:numStars="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:rating="3"
                        android:stepSize="0.0" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:text="@{@string/percent(String.valueOf(restaurant.rating_details.get(4).rate_per))}"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:text="1"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:textColor="@color/black_light" />

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/divider_color"

                            >

                        </View>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:alpha="0.2"
                            android:background="@color/theme_color"
                            android:layout_calculatewidth="@{restaurant.rating_details.get(5).rate_per}"
                            >

                        </View>

                    </RelativeLayout>




                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:isIndicator="true"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:numStars="1"
                        android:rating="3"
                        android:stepSize="0.0" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/Subtitle_TextViewSmall"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:text="@{@string/percent(String.valueOf(restaurant.rating_details.get(5).rate_per))}"
                        />



                </LinearLayout>





                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/divider_color"
                    />



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>







    </RelativeLayout>


</layout>