<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:zhy="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>

        <import type="android.view.View">

        </import>

        <variable name="util"
            type="dk.eatmore.foodapp.utils.BindDataUtils"/>


        <variable
            name="restaurant"
            type="dk.eatmore.foodapp.model.home.Restaurant">

        </variable>


        <variable
            name="handler"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Home.ProductInfo.Rating.MyClickHandler" />



    </data>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:visibility="visible"
            android:background="@color/divider_color"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    style="@style/CardViewStyle"
                    android:id="@+id/row_contain"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_16sdp"


                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                                <RatingBar
                                    style="?android:attr/ratingBarStyleIndicator"
                                    android:layout_width="wrap_content"
                                    android:id="@+id/quality_of_food_rating"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:numStars="6"
                                    android:rating="@{restaurant.total_rating}"
                                    android:stepSize="0.0" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TitleMidiumlight_TextViewMid"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_width="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/theme_color"
                                android:text="@{String.valueOf(restaurant.total_rating)}"
                                />
                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TitleMidiumlight_TextViewMid"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/ubuntu_l"
                                android:text=" / 6"
                                />



                        </LinearLayout>

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TitleMidiumlight_TextViewMid"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/ubuntu_l"
                            android:text="@{restaurant.total_review_count.equalsIgnoreCase(`0`) ? @string/no_rating_yet : @string/baseret_p_anmeldelser(restaurant.total_review_count)}"
                            />



                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <android.support.v7.widget.AppCompatCheckBox
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="wrap_content"
                    android:id="@+id/checkbox_filter"
                    android:checked="false"
                    android:buttonTint="@color/theme_color"
                    android:visibility="@{restaurant.review_list.size() > 0 ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:text="Vis kun kommentarer."

                    />




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@color/divider_color"
                    />



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_100sdp"
                    android:layout_height="match_parent"/>


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>







    </RelativeLayout>


</layout>