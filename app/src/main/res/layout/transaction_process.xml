<?xml version="1.0" encoding="utf-8"?>


<layout>

    <data>

        <variable
            name="user"
            type="dk.eatmore.foodapp.model.User">

        </variable>


        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.EditCart.MyClickHandler">

        </variable>


    </data>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/total_pay_rel"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:id="@+id/address_card"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp"
                >
                <FrameLayout
                    android:id="@+id/signup_view"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleLarge"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_200sdp"
                        android:visibility="visible"
                        android:indeterminate="true" />


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TextViewMid"
                        android:singleLine="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black_light"
                        android:text="Loading..." />


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextViewSmall"
                            android:singleLine="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="@dimen/_130sdp"
                            android:textColor="@color/black_light"
                            android:text="Please wait to complete the transaction" />




                </FrameLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>

</layout>