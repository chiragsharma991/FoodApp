                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:singleLine="true"
                                        android:text="Total (0 Goods)"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/epay_total_txt"
                                        style="@style/TextViewLarge"
                                        android:singleLine="true"
                                        android:text="00,00 Kr,"
                                        android:textColor="@color/theme_color_secondary_dark"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/epay_total_lbl" />
            -->


                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/pick_delivery_txt"
                                style="@style/SubtitleMidium_TextViewSmall"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:gravity="center_horizontal"
                                android:text="@{pickup_delivery_txt}"
                                android:visibility="@{pickup_delivery_txt.equalsIgnoreCase(``) ? View.GONE : View.VISIBLE}"
                                android:textColor="@color/black_default"
                                ProgressWheel:layout_constraintEnd_toEndOf="parent"
                                ProgressWheel:layout_constraintStart_toStartOf="parent"
                                ProgressWheel:layout_constraintTop_toBottomOf="@+id/tab_card" />

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/pick_delivery_txt"
                                app:layout_constraintVertical_bias="0.0">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:alpha="0.2"
                                    android:background="@color/divider_color" />


