                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@mipmap/no_item_found" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/error_txt"
                        style="@style/TextViewMid"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_horizontal"
                        android:text="GOOD FOOD IS ALWAYS COOKING"
                        android:textColor="@color/black"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TextViewSmall"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/error_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_horizontal"
                        android:text="Your cart is empty. Add something from the menu"
                        android:textColor="@color/black_default"

                        />


                </RelativeLayout>


            </LinearLayout>



        </FrameLayout>



        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progress"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />




