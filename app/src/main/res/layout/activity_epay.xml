<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/background_light"
        >

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_bar"
                >
        <include layout="@layout/toolbar">

        </include>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:id="@+id/epay_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"

                >

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    >


                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <RelativeLayout
                            android:id="@+id/tab_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                app:cardBackgroundColor="@color/theme_color"
                                app:cardCornerRadius="@dimen/_2sdp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TabLayout
                                        android:id="@+id/menu_tabs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_gravity="bottom"
                                        android:layout_margin="@dimen/_1sdp"
                                        android:animateLayoutChanges="true"
                                        android:fitsSystemWindows="true"
                                        app:tabBackground="@drawable/tab_background"
                                        app:tabGravity="fill"
                                        app:tabIndicatorColor="@null"
                                        app:tabMode="scrollable"
                                        app:tabSelectedTextColor="@color/white"
                                        app:tabTextAppearance="@style/tab_text"
                                        app:tabTextColor="@color/red" />


                                </RelativeLayout>


                            </android.support.v7.widget.CardView>


                        </RelativeLayout>




                        <!--        <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/epay_total_lbl"
                                    style="@style/TextViewMid"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:singleLine="true"
                                    android:text="Total (0 Goods)"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/epay_total_txt"
                                    style="@style/TextViewLarge"
                                    android:singleLine="true"
                                    android:text="00,00 Kr,"
                                    android:textColor="@color/theme_color_secondary_dark"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/epay_total_lbl" />
        -->
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/epay_continue_btn"
                            style="@style/Button"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/theme_color"
                            android:text="@string/continue_"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tab_card"
                            app:layout_constraintVertical_bias="0.0">


                            <LinearLayout
                                android:id="@+id/your_orderview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background_light"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewMid"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.7"
                                    android:gravity="start"
                                    android:singleLine="true"
                                    android:text="Your Order"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/TextViewMid"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="0.3"
                                    android:gravity="end"
                                    android:singleLine="true"
                                    android:text="Right"
                                    android:textColor="@color/theme_color"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </LinearLayout>


                            <dk.eatmore.foodapp.utils.ZigzagView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                app:zigzagBackgroundColor="@color/white"
                                app:zigzagElevation="2dp"
                                app:zigzagHeight="5dp"
                                app:zigzagShadowAlpha="0.9"
                                app:zigzagSides="bottom">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/add_parentitem_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/add_parentitem_view"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:layerType="software"
                                        android:src="@drawable/dashline" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/add_parentitem_view"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:layout_marginTop="@dimen/_16sdp"
                                            android:layout_marginEnd="@dimen/_8sdp"
                                            android:orientation="horizontal">

                                            <android.support.v7.widget.AppCompatTextView
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:layout_weight="1.2"
                                                android:gravity="start"
                                                android:singleLine="true"
                                                android:text="Subtotal"
                                                android:textColor="@color/black_light"
                                                android:textStyle="bold" />

                                            <android.support.v7.widget.AppCompatTextView
                                                android:id="@+id/subtotal"
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="0.8"
                                                android:gravity="end"
                                                android:singleLine="true"
                                                android:text="45,00kr"
                                                android:textColor="@color/black_light"
                                                android:textStyle="bold" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:layout_marginEnd="@dimen/_8sdp"
                                            android:orientation="horizontal">

                                            <android.support.v7.widget.AppCompatTextView
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:layout_weight="1.7"
                                                android:gravity="start"
                                                android:singleLine="true"
                                                android:text="Tax"
                                                android:textColor="@color/black_light" />

                                            <android.support.v7.widget.AppCompatTextView
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="0.3"
                                                android:gravity="end"
                                                android:singleLine="true"
                                                android:text="0,00kr"
                                                android:textColor="@color/black_light" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_marginEnd="@dimen/_8sdp"
                                            android:orientation="horizontal">

                                            <android.support.v7.widget.AppCompatTextView
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:layout_weight="1.2"
                                                android:gravity="start"
                                                android:singleLine="true"
                                                android:text="Total"
                                                android:textColor="@color/black_light"
                                                android:textStyle="bold" />

                                            <android.support.v7.widget.AppCompatTextView
                                                android:id="@+id/total"
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="0.8"
                                                android:gravity="end"
                                                android:singleLine="true"
                                                android:text="145,00kr"
                                                android:textColor="@color/black_light"
                                                android:textStyle="bold" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:layout_marginEnd="@dimen/_8sdp"
                                            android:layout_marginBottom="@dimen/_8sdp"
                                            android:orientation="horizontal">

                                            <android.support.v7.widget.AppCompatTextView
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:layout_weight="1.2"
                                                android:gravity="start"
                                                android:singleLine="true"
                                                android:text="Restaurant Address:"
                                                android:textColor="@color/black_light" />

                                            <android.support.v7.widget.AppCompatTextView
                                                style="@style/TextViewSmall"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="0.8"
                                                android:gravity="end"
                                                android:singleLine="true"
                                                android:text="5,00kr"
                                                android:textColor="@color/black_light"
                                                android:visibility="invisible" />


                                        </LinearLayout>
                                    </LinearLayout>


                                </RelativeLayout>


                            </dk.eatmore.foodapp.utils.ZigzagView>


                        </LinearLayout>



                    </android.support.constraint.ConstraintLayout>





                </android.support.v4.widget.NestedScrollView>



            </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>

</layout>