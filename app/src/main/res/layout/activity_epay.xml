                                                                    app:layout_constraintStart_toStartOf="parent"
                                                                    app:layout_constraintTop_toTopOf="parent" />
                                &ndash;&gt;

                                                            </LinearLayout>
                                -->


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_8sdp"
                                    >

                                    <LinearLayout
                                        android:id="@+id/add_parentitem_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:orientation="vertical">


                                    </LinearLayout>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/add_parentitem_view"
                                        android:visibility="gone"
                                        app:zigzagBackgroundColor="@color/white"
                                        app:zigzagElevation="2dp"
                                        app:zigzagHeight="5dp"
                                        app:zigzagShadowAlpha="0.9"
                                        app:zigzagSides="bottom">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:layout_below="@+id/add_parentitem_view"
                                                android:layout_marginStart="@dimen/_8sdp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:layerType="software"
                                                android:src="@drawable/dashline" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_8sdp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:orientation="horizontal">

                                                <android.support.v7.widget.AppCompatTextView
                                                    style="@style/SubtitleMidium_TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="@dimen/_8sdp"
                                                    android:layout_weight="1.2"
                                                    android:fontFamily="@font/hindvadodara_medium"
                                                    android:gravity="start"
                                                    android:singleLine="true"
                                                    android:text="Subtotal" />

                                                <android.support.v7.widget.AppCompatTextView
                                                    android:id="@+id/subtotal"
                                                    style="@style/SubtitleMidium_TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_weight="0.8"
                                                    android:gravity="end"
                                                    android:singleLine="true"
                                                    android:text="45,00kr" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_8sdp"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:orientation="horizontal"
                                                android:visibility="gone">

                                                <android.support.v7.widget.AppCompatTextView
                                                    style="@style/SubtitleMidium_TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="@dimen/_8sdp"
                                                    android:layout_weight="1.7"
                                                    android:gravity="start"
                                                    android:singleLine="true"
                                                    android:text="Tax" />

                                                <android.support.v7.widget.AppCompatTextView
                                                    style="@style/SubtitleMidium_TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_weight="0.3"
                                                    android:gravity="end"
                                                    android:singleLine="true"
                                                    android:text="0,00 kr" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_8sdp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:orientation="horizontal">

                                                <android.support.v7.widget.AppCompatTextView
                                                    style="@style/SubtitleMidium_TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="@dimen/_8sdp"
                                                    android:layout_weight="1.2"
                                                    android:gravity="start"
                                                    android:singleLine="true"
                                                    android:text="Total" />

                                                <android.support.v7.widget.AppCompatTextView
                                                    android:id="@+id/total"
                                                    style="@style/SubtitleMidium_TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_weight="0.8"
                                                    android:gravity="end"
                                                    android:singleLine="true"
                                                    android:text="145,00kr" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_8sdp"
                                                android:layout_marginEnd="@dimen/_8sdp"
                                                android:layout_marginBottom="@dimen/_8sdp"
                                                android:orientation="horizontal"
                                                android:visibility="gone">

                                                <android.support.v7.widget.AppCompatTextView
                                                    style="@style/TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="@dimen/_8sdp"
                                                    android:layout_weight="1.2"
                                                    android:gravity="start"
                                                    android:singleLine="true"
                                                    android:text="Restaurant Address:"
                                                    android:textColor="@color/black_light" />

                                                <android.support.v7.widget.AppCompatTextView
                                                    style="@style/TextViewSmall"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_weight="0.8"
                                                    android:gravity="end"
                                                    android:singleLine="true"
                                                    android:text="5,00kr"
                                                    android:textColor="@color/black_light"
                                                    android:visibility="invisible" />


                                            </LinearLayout>

                                            <View
                                                android:id="@+id/view"
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:alpha="0.2"
                                                android:background="@color/divider_color"
                                                android:visibility="visible" />

                                        </LinearLayout>


                                    </RelativeLayout>


                                </RelativeLayout>


                            </LinearLayout>


                        </android.support.constraint.ConstraintLayout>


                    </android.support.v4.widget.NestedScrollView>


