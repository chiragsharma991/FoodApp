<?xml version="1.0" encoding="utf-8"?>




    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin"
        android:background="@color/white"
        app:contentScrim="@android:color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        >

        <RelativeLayout
            android:id="@+id/toolbarRel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">





            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_toolbar_back"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                app:srcCompat="@drawable/back"
                android:visibility="visible"
                />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/hindvadodara_medium"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/black"
                android:singleLine="true"
                android:maxLength="30"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_50sdp"
                />

            <!-- <android.support.v7.widget.AppCompatTextView
                 android:id="@+id/txt_toolbarPlues"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:text="sdfsdf"
                 android:fontFamily="@font/hindvadodara_medium"
                 style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                 android:textColor="@color/black"
                 />


-->

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@mipmap/eatmore_logo"
                android:tint="@color/theme_color"
                android:id="@+id/restaurant_logo"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />




            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_toolbar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hindvadodara_medium"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="visible"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:clickable="true"
                android:focusable="true"
                android:layout_centerInParent="true"
                android:textColor="@color/theme_color"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="top"
                android:visibility="gone"
                android:id="@+id/txt_toolbar_right_img"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:scaleType="fitXY"
                />










        </RelativeLayout>






    </android.support.v7.widget.Toolbar>



