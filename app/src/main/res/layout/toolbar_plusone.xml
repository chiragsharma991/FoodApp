<?xml version="1.0" encoding="utf-8"?>




<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    android:background="@android:color/white"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:layout_collapseMode="pin"
    app:contentScrim="@android:color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    >



    <RelativeLayout
        android:id="@+id/lin_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >



        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_toolbar_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8sdp"
            android:visibility="visible"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_toolbar"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:maxLength="23"
            android:singleLine="true"
            android:layout_toEndOf="@+id/img_toolbar_back"
            android:fontFamily="@font/hindvadodara_medium"
            android:textColor="@color/black"
            />


        <RelativeLayout
            android:id="@+id/toolbar_badge_view"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txt_toolbar"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            >
            <RelativeLayout
                android:id="@+id/viewcart"
                android:layout_width="wrap_content"
                android:background="@drawable/rectangle_curve_shape"
                android:alpha="0.9"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/addtocart_bascket"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    app:srcCompat="@drawable/shopping_basket_black_24dp"
                    />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextViewSmall"
                    android:id="@+id/badge_countprice"
                    android:layout_toEndOf="@+id/addtocart_bascket"
                    android:fontFamily="@font/hindvadodara_regular"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:text="00.00 kr"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <TextView
                android:id="@+id/badge_notification_txt"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/viewcart"
                android:background="@drawable/item_count"
                android:text="21"
                android:elevation="@dimen/_5sdp"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="visible"
                android:textColor="#FFF"
                android:textSize="7sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.Toolbar>

