<?xml version="1.0" encoding="utf-8"?>




<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    android:background="@android:color/white"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:layout_collapseMode="pin"
    app:contentScrim="@android:color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_toolbar_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_8sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_toolbar"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/img_toolbar_back"
            android:ellipsize="end"
            android:fontFamily="@font/hindvadodara_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewcart"
            app:layout_constraintStart_toEndOf="@+id/img_toolbar_back"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/viewcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:alpha="0.9"
            android:background="@drawable/rectangle_curve_shape"
            android:elevation="@dimen/_5sdp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_toolbar" tools:targetApi="lollipop">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/addtocart_bascket"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/basketwhite" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/badge_countprice"
                style="@style/TextViewSmall"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/addtocart_bascket"
                android:fontFamily="@font/hindvadodara_regular"
                android:textColor="@color/white" />
        </RelativeLayout>



    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.Toolbar>

