<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="data"
            type="dk.eatmore.foodapp.fragment.Dashboard.Order.Data">

        </variable>

        <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>



        <variable
            name="myclickhandler"
            type="dk.eatmore.foodapp.fragment.Dashboard.Order.OrderedRestaurant.MyClickHandler"
            >
        </variable>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:id="@+id/constraint_one"
        >


        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:srcCompat="@color/gray"
                android:onClick="@{myclickhandler :: showmenu}"
                android:scaleType="fitXY" />





            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:scaleType="fitXY"
                android:id="@+id/favorite_btn"
                android:src="@mipmap/heart_full"
                android:layout_marginTop="@dimen/_8sdp"
                android:onClick="@{myclickhandler :: on_favorite}"
                android:tint="@color/gray"
                android:layout_marginStart="22.5dp"
                />





            <!--
                                        </android.support.v7.widget.CardView>
            -->


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/restaurant_name"
                android:onClick="@{myclickhandler :: showmenu}"
                style="@style/Titlelight_TextViewSmall"
                android:text="@{data.restaurant_name}" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/restaurant_contact"
                style="@style/Subtitle_TextViewSmall"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:text="@{`DKK `+ util.convertCurrencyToDanishWithoutLabel(data.order_total)}" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/restaurant_address"
                style="@style/Subtitle_TextViewSmall"
                android:layout_gravity="center_vertical"
                android:text="@{data.shipping.equalsIgnoreCase(@string/pickup_caps) ? util.parsewithoutTimeToddMMyyyy(data.order_date)+` `+@string/for_hent_selv : util.parsewithoutTimeToddMMyyyy(data.order_date)+` `+@string/til_levering}" />



            <android.support.v7.widget.AppCompatButton
                style="@style/Button"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/background_light"
                android:fontFamily="@font/hindvadodara_light"
                android:gravity="center"
                android:onClick="@{myclickhandler :: showmenu}"
                android:text="Vis menukort"
                android:textColor="@color/white" />



        </LinearLayout>



    </android.support.constraint.ConstraintLayout>


</layout>







