<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/divider_color"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal"
        >



        <RelativeLayout
            android:id="@+id/rel_home"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_home"
                    android:layout_width="28dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/restauranter" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/img_home_txt"
                    style="@style/SubtitleMidium_TextViewSmall"
                    android:layout_below="@+id/img_home"
                    android:layout_alignEnd="@+id/img_home"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hindvadodara_regular"
                    android:singleLine="true"
                    android:text="Restauranter"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/img_home"
                    app:layout_constraintStart_toStartOf="@+id/img_home"
                    app:layout_constraintTop_toBottomOf="@+id/img_home" />



            </android.support.constraint.ConstraintLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_order"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_fav"
                    android:layout_width="28dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ordre" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/img_fav_txt"
                    style="@style/SubtitleMidium_TextViewSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hindvadodara_regular"
                    android:singleLine="true"
                    android:text="Ordre"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_fav"
                    app:layout_constraintStart_toStartOf="@+id/img_fav"
                    app:layout_constraintTop_toBottomOf="@+id/img_fav" />

            </android.support.constraint.ConstraintLayout>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_profile"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_profile"
                    android:layout_width="28dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/indstillinger" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/img_profile_txt"
                    style="@style/SubtitleMidium_TextViewSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hindvadodara_regular"
                    android:singleLine="true"
                    android:text="Indstillinger"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile"
                    app:layout_constraintStart_toStartOf="@+id/img_profile"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile" />




            </android.support.constraint.ConstraintLayout>


        </RelativeLayout>

    </LinearLayout>





</LinearLayout>