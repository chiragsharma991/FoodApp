<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View">

        </import>


        <variable
            name="handlers"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.Paymentmethod.MyClickHandler">

        </variable>

        <variable
            name="paymentinfo"
            type="dk.eatmore.foodapp.activity.main.epay.fragment.Paymentmethod.PaymentInfoModel">

        </variable>



    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:id="@+id/giftItem"
            android:gravity="center_vertical"
            >

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="-7dp"
                android:id="@+id/giftCheck"
                android:paddingRight="-6dp"
                android:clickable="false"
                android:buttonTint="@color/theme_color"
                android:checked="@{paymentinfo.ischeck}"
                />

            <android.support.v7.widget.AppCompatTextView
                style="@style/TitleMidiumlight_TextViewMid"
                android:singleLine="true"
                android:text="Eatmore"
                android:id="@+id/giftTitle"
                />

        </LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/continue_btn"
            style="@style/Button"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/white"
            android:onClick="@{(v) -> handlers.onClick(v,`04`,paymentinfo)}"
            android:text="@{paymentinfo.btn_txt}"
            android:visibility="@{paymentinfo.walletBtn_expand ? View.VISIBLE : View.GONE}"
            android:background="@color/theme_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            />

    </LinearLayout>



</layout>
