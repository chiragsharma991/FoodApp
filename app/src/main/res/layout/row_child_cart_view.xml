<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>


        <variable
            name="data"
            type="dk.eatmore.foodapp.model.cart.ProductAttributeValueItem"
            >

        </variable>

    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row_child_cart_itemlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/item_rcc_txt"
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1.3"
                        android:singleLine="true"
                        android:text="@{data.a_value}"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Subtitle_TextViewSmall"
                            android:id="@+id/price_rcc_txt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="@{ Double.parseDouble(data.a_price) &lt;= 0 ? `` : util.convertCurrencyToDanish(data.a_price)}"
                            />

                        <!--android:text="@{util.convertCurrencyToDanish(data.a_price)}"-->

                   <!--     <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/row_child_cart_add_btn"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/add_item" />-->

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/row_child_cart_add_btn"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:background="@color/theme_color"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/add"
                            />



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/divider_color" />


        </LinearLayout>


    </RelativeLayout>

</layout>



