<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="data"
            type="dk.eatmore.foodapp.model.home.ProductListItem">

        </variable>

        <variable
            name="handler"
            type="dk.eatmore.foodapp.adapter.universalAdapter.RecyclerClickListner" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/row_cat_cardview"
            style="@style/CardViewStyle"
            android:onClick="@{()->handler.onClick(data)}"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                >

                <android.support.constraint.Guideline
                    android:id="@+id/guidline_vertical_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

                <android.support.constraint.Guideline
                    android:id="@+id/guidline_vertical_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.9" />



                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextViewSmall"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/cat_title"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1.05"
                    android:text="@{data.p_name}"
                    android:textColor="@color/black_light"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guidline_vertical_one"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView"
                    style="@style/TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{data.p_price}"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="@color/black_light"
                    app:layout_constraintEnd_toStartOf="@+id/guidline_vertical_two"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/guidline_vertical_one"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView3"
                    style="@style/TextViewSmall"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.05"
                    android:text="@{data.p_desc}"
                    android:textColor="@color/black_light"
                    app:layout_constraintEnd_toStartOf="@+id/guidline_vertical_two"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cat_title" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView2"
                    style="@style/TextViewSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.05"
                    android:visibility="gone"
                    android:textColor="@color/black_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3"
                    app:layout_constraintVertical_bias="0.0" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="top"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/background_light"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guidline_vertical_two"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/add" />


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>



    </RelativeLayout>

</layout>



