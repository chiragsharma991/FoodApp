<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View">
        </import>

        <variable
            name="editaddressListModel"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Account.EditAddress.Messages">
        </variable>


    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:id="@+id/row_contain"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                >

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextViewSmall"
                    android:id="@+id/fst_txt"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@{editaddressListModel.address_title}"
                    android:singleLine="true"
                    />
                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextViewSmall"
                    android:id="@+id/sec_txt"
                    android:layout_below="@+id/fst_txt"
                    android:layout_gravity="center_vertical"
                    android:text="@{@string/streethousefloor(editaddressListModel.street,editaddressListModel.house_no,editaddressListModel.floor_door)}"
                    android:singleLine="true"
                    android:textColor="@color/black_light"
                    />
                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextViewSmall"
                    android:id="@+id/third_txt"
                    android:layout_below="@+id/sec_txt"
                    android:layout_gravity="center_vertical"
                    android:text="@{@string/postalcity(editaddressListModel.postal_code,editaddressListModel.city)}"
                    android:singleLine="true"
                    android:textColor="@color/black_light"
                    />



                <!--    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        />-->


            </RelativeLayout>


        </android.support.v7.widget.CardView>




        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:visibility="gone"
            android:background="@color/divider_color"
            />




    </LinearLayout>

</layout>


