<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View">

        </import>

        <variable
            name="restaurant"
            type="dk.eatmore.foodapp.model.home.Restaurant">

        </variable>

        <variable
            name="pickup_delivery_txt"
            type="String">

        </variable>

    </data>


    <RelativeLayout
        android:id="@+id/clayout_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="@color/divider_color"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="@dimen/_16sdp">


            <RelativeLayout
                android:id="@+id/free_txt_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/free_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/expandtxt_btn"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{restaurant.free_text.trim()}"
                    android:textColor="@color/theme_color"
                    android:visibility="@{restaurant.free_text.equalsIgnoreCase(``) ? View.GONE : View.VISIBLE}" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/expandtxt_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:tint="@color/black_default"
                    app:srcCompat="@drawable/down_arrow" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/free_txt_view"

                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cardviewtab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/theme_color"
                    app:cardCornerRadius="@dimen/_2sdp">


                    <android.support.design.widget.TabLayout
                        android:id="@+id/menu_tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/_1sdp"
                        android:animateLayoutChanges="true"
                        android:clickable="false"
                        android:fitsSystemWindows="true"
                        app:tabBackground="@drawable/tab_background"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@null"
                        app:tabMode="scrollable"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextAppearance="@style/tab_text"
                        app:tabTextColor="@color/red" />


                </android.support.v7.widget.CardView>


                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:translationY="-3dp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@+id/cardviewtab"
                    android:indeterminate="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/freetxtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_card"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_8sdp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/pick_delivery_txt"
                    style="@style/SubtitleMidium_TextViewSmall"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{pickup_delivery_txt}"
                    android:textColor="@color/black_default"
                    android:visibility="@{pickup_delivery_txt.equalsIgnoreCase(``) ? View.GONE : View.VISIBLE}" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/info_outline_img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/pick_delivery_txt"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:tint="@color/theme_color"
                    android:visibility="@{pickup_delivery_txt.equalsIgnoreCase(``) ? View.GONE : View.VISIBLE}"
                    app:srcCompat="@drawable/info_outline" />


            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/search_view"
                style="@style/CardViewStyle"
                android:layout_height="@dimen/_37sdp"
                android:layout_width="match_parent"
                android:layout_below="@+id/freetxtInfo"
                android:layout_margin="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/theme_color"
                android:transitionName="@string/transition_string">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="@dimen/_2sdp"
                    >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/menu_search"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:singleLine="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/hindvadodara_light"
                        android:hint="@string/search_the_menu"
                        android:inputType="number"
                        android:lines="1"
                        android:imeOptions="actionDone"
                        android:layout_toStartOf="@+id/search_button"
                        android:background="@android:color/transparent"
                        style="@style/EditText_Normal"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        >

                    </android.support.v7.widget.AppCompatEditText>


                    <RelativeLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/search_button"
                        android:background="@color/theme_color"
                        >

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="centerInside"
                            android:visibility="visible"
                            android:id="@+id/search_icon"
                            android:contentDescription="@string/content_image"
                            android:layout_centerInParent="true"
                            app:srcCompat="@mipmap/search"
                            android:tint="@color/white"
                            />




                    </RelativeLayout>

                </RelativeLayout>





            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/search_view"

                >


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="@dimen/_100sdp"
                    android:paddingTop="@dimen/_3sdp" />


                <!--

                                <ProgressBar
                                    android:id="@+id/progress_bar"
                                    android:layout_marginTop="@dimen/_16sdp"
                                    android:layout_centerHorizontal="true"
                                    style="?android:attr/progressBarStyleSmall"
                                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:indeterminate="true" />
                -->


            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</layout>


