<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"

        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/tab_card"
            android:gravity="center_horizontal"

            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                app:cardBackgroundColor="@color/theme_color"
                app:cardCornerRadius="@dimen/_2sdp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:fitsSystemWindows="true"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        app:tabMode="scrollable"
                        android:layout_margin="@dimen/_1sdp"
                        android:animateLayoutChanges="true"
                        app:tabGravity="fill"
                        android:layout_gravity="bottom"
                        app:tabIndicatorColor="@null"
                        app:tabBackground="@drawable/tab_background"
                        app:tabTextAppearance="@style/tab_text"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextColor="@color/red"
                        />



                </RelativeLayout>



            </android.support.v7.widget.CardView>


        </RelativeLayout>



        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:id="@+id/search_card"
            android:layout_below="@+id/tab_card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <EditText
                    android:id="@+id/log_email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/hindvadodara_medium"
                    android:lines="1"
                    android:hint="@string/search_the_menu"
                    android:drawableLeft="@drawable/search"
                    android:drawableTint="@color/black_default"
                    android:drawablePadding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:background="@android:color/white"
                    />




            </RelativeLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_below="@+id/search_card"

            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_menu"
                android:padding="@dimen/_2sdp"
                android:nestedScrollingEnabled="true"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.v7.widget.CardView>




    </RelativeLayout>


</android.support.constraint.ConstraintLayout>