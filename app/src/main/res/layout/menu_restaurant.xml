            <android.support.v7.widget.AppCompatTextView
                style="@style/TextViewSmall"
                android:id="@+id/free_txt"
                android:visibility="@{restaurant.free_text.equalsIgnoreCase(``) ? View.GONE : View.VISIBLE}"
                android:text="@{restaurant.free_text.replace(`\n`,``).replace(`\r`,``)}"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="@color/theme_color"
                android:gravity="center_horizontal"
                />


            <android.support.v7.widget.CardView
                style="@style/CardViewStyle"
                android:id="@+id/search_view"
                android:layout_margin="0dp"
                android:layout_below="@+id/free_txt"
                android:transitionName="@string/transition_string"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <EditText
                        android:id="@+id/menu_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:padding="@dimen/_10sdp"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:fontFamily="@font/hindvadodara_medium"
                        android:lines="1"
                        android:hint="@string/search_the_menu"
                        android:drawableLeft="@drawable/search"
                        android:drawableTint="@color/black_default"
                        android:drawablePadding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:background="@android:color/white"
                        />




                </RelativeLayout>


            </android.support.v7.widget.CardView>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/search_view"

                >
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progress"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_menu"
                    android:nestedScrollingEnabled="true"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>




