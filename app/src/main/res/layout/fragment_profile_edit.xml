<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>



        <variable
            name="subscribe"
            type="Boolean">

        </variable>

    </data>


    <FrameLayout
        android:id="@+id/userprofile_container"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >


            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appbar"
                >
                <include layout="@layout/toolbar"
                    >

                </include>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/name_txt"
                        style="@style/SubtitleMidium_TextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Name"
                        app:layout_constraintBottom_toTopOf="@+id/name_edt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/name_edt"
                        style="@style/EditText_Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:nextFocusDown="@id/email_txt"
                        android:background="@drawable/rectangle_edittext"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColor="@color/black_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name_txt">

                    </android.support.v7.widget.AppCompatEditText>


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/email_txt"
                        style="@style/SubtitleMidium_TextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/email"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name_edt" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/email_edt"
                        style="@style/EditText_Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:nextFocusDown="@id/telephone_txt"
                        android:layout_weight="1.5"
                        android:background="@drawable/rectangle_edittext"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColor="@color/black_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email_txt" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/telephone_txt"
                        style="@style/SubtitleMidium_TextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/telephone_number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email_edt" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/telephone_edt"
                        style="@style/EditText_Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/rectangle_edittext"
                        android:inputType="number"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColor="@color/black_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/telephone_txt" />


                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_subscribe"
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:checked="@{subscribe}"
                        android:text="Modtag vores nyhedsbrev."
                        app:layout_constraintStart_toStartOf="@+id/telephone_edt"
                        app:layout_constraintTop_toBottomOf="@+id/telephone_edt"

                        />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/update_view"
                        style="@style/Button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/theme_color"
                        android:text="@string/update"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_subscribe"
                        app:layout_constraintVertical_bias="0.0" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/changepassword_txt"
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/change_password"
                        android:textColor="@color/theme_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/update_view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/delete_user_txt"
                        style="@style/Subtitle_TextViewSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/slet_bruger"
                        android:textColor="@color/theme_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/changepassword_txt" />


                </android.support.constraint.ConstraintLayout>



            </android.support.v4.widget.NestedScrollView>


        </RelativeLayout>



    </FrameLayout>






</layout>

