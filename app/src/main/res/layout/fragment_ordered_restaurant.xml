<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res/android"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="data"
            type="dk.eatmore.foodapp.fragment.Dashboard.Order.Data">

        </variable>

        <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>

        <variable
            name="enable_rating"
            type="Boolean">

        </variable>

        <variable
            name="is_progress"
            type="Boolean">

        </variable>


        <variable
            name="myclickhandler"
            type="dk.eatmore.foodapp.fragment.Dashboard.Order.OrderedRestaurant.MyClickHandler"
            >
        </variable>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/background_light"
        android:id="@+id/orderedrestaurant_container"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_light"
            >


            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/toolbar"


                    >

                </include>


            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_bar"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="vertical">



                    <android.support.v7.widget.CardView
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">



                        <include layout="@layout/include_orderedrest_info"
                            bind:data="@{data}"
                            bind:util="@{util}"
                            bind:myclickhandler="@{myclickhandler}"

                            >

                        </include>




                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_status_view"
                        android:animateLayoutChanges="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_16sdp"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/order_status_txt"
                                    style="@style/Titlelight_TextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:maxLength="38"
                                    android:ellipsize="end"
                                    android:text="Order accepteret " />


                                <WebView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:id="@+id/transaction_progress_bar"
                                    android:scrollIndicators="none"
                                    android:layout_toEndOf="@+id/order_status_txt"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:visibility="visible"
                                    tools:targetApi="m">

                                </WebView>

                            </RelativeLayout>


                            <android.support.v7.widget.AppCompatTextView
                                style="@style/Subtitle_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:id="@+id/order_accepted_time"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:visibility="@{data.accept_reject_time == null ? View.GONE : View.VISIBLE}"
                                android:layout_height="wrap_content"
                                android:text="@{data.pickup_delivery_time == null ? `` : util.parsewithoutTimeToddMMyyyy(data.pickup_delivery_time)+` -kl. `+util.parseTimeToHHmm(data.pickup_delivery_time)}"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rating_view"
                        android:animateLayoutChanges="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_16sdp"
                            >

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/exeprience"
                                style="@style/TitleMidiumlight_TextViewMid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="38"
                                android:ellipsize="end"
                                android:text="Hvordan van din oplevelse?" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/divider_color"
                                />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/Subtitle_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:id="@+id/rate_txt"
                                android:layout_height="wrap_content"
                                android:text="Vi vil værdsætte din bedømmelse med ris og ros, så vi kan blive endu bedre."
                                />


                            <android.support.v7.widget.AppCompatButton
                                style="@style/Button"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:fontFamily="@font/hindvadodara_light"
                                android:background="@color/background_light"
                                android:stateListAnimator="@null"
                                android:gravity="center"
                                android:text="Bedøm nu"
                                android:onClick="@{myclickhandler :: on_rating}"
                                android:layout_width="@dimen/_95sdp"
                                android:textColor="@color/white"
                                tools:targetApi="lollipop" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rated_view"
                        android:animateLayoutChanges="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_16sdp"
                            >

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TitleMidiumlight_TextViewMid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="38"
                                android:ellipsize="end"
                                android:text="Bedømmelser" />


                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:id="@+id/total_rating"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:numStars="6"
                                android:stepSize="0.0"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/divider_color"
                                />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/SubtitleMidium_TextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/qty_txt"
                                    android:text="Kvalitet:"
                                    />

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:id="@+id/qty_rating"
                                    android:text="4/6"
                                    android:layout_toEndOf="@+id/qty_txt"
                                    android:singleLine="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    />
                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:id="@+id/qty_remark"
                                    android:text="(Good)"
                                    android:layout_toEndOf="@+id/qty_rating"
                                    android:singleLine="true"
                                    android:textColor="@color/theme_color"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                >

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/SubtitleMidium_TextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/customer_service"
                                    android:text="kundeservice:"
                                    />

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:id="@+id/customer_rating"
                                    android:text="4/6"
                                    android:layout_toEndOf="@+id/customer_service"
                                    android:singleLine="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    />
                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:id="@+id/customer_remark"
                                    android:text="(Good)"
                                    android:layout_toEndOf="@+id/customer_rating"
                                    android:singleLine="true"
                                    android:textColor="@color/theme_color"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                >

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/SubtitleMidium_TextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/delivery_time"
                                    android:text="Leveringstid:"
                                    />

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:id="@+id/deliver_rating"
                                    android:text="4/6"
                                    android:layout_toEndOf="@+id/delivery_time"
                                    android:singleLine="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    />
                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:id="@+id/deliver_remark"
                                    android:text="(Good)"
                                    android:layout_toEndOf="@+id/deliver_rating"
                                    android:singleLine="true"
                                    android:textColor="@color/theme_color"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                >

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/SubtitleMidium_TextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/your_rating_label"
                                    android:text="Din bedømmelse:"
                                    />



                            </RelativeLayout>


                            <android.support.v7.widget.AppCompatTextView
                                style="@style/Subtitle_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:id="@+id/comment_txt"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_height="wrap_content"
                                android:text="Comment du brug for hjaelp til din ordre, er du mere end velkommen til at ringe direkte til restauranten pa 88826543"
                                />



                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_16sdp"
                            >

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/kundeserice"
                                style="@style/TitleMidiumlight_TextViewMid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="38"
                                android:ellipsize="end"
                                android:text="Kundeservice" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.2"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/divider_color"
                                />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/Subtitle_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:id="@+id/contact_txt"
                                android:layout_height="wrap_content"
                                />




                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <include
                        layout="@layout/include_orderedrest_pricecalculation"
                        bind:data="@{data}"
                        bind:util="@{util}"
                        bind:myclickhandler="@{myclickhandler}"
                        >
                    </include>


                </LinearLayout>



            </android.support.v4.widget.NestedScrollView>


            <!--                        android:visibility="@{is_progress ? View.VISIBLE : View.GONE}"-->

                            <!--                 <RelativeLayout
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/background_light"
                                                 android:visibility="@{is_progress ? View.VISIBLE : View.GONE}"
                                                 >
                                                 <ProgressBar
                                                     style="?android:attr/progress"
                                                     app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:layout_centerInParent="true"
                                                     android:indeterminate="true" />


                                             </RelativeLayout>
-->


        </RelativeLayout>









    </FrameLayout>

</layout>