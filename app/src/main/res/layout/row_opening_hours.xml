<?xml version="1.0" encoding="utf-8"?>



<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

<data>

    <variable
        name="data"
        type="dk.eatmore.foodapp.activity.main.home.fragment.ProductInfo.Info.OpeningHourModel">

    </variable>


</data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatTextView
            style="@style/TextViewSmall"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1.05"
            android:textColor="@{data.openingFlag ? @color/theme_color : @color/black_light}"
            android:text="@{data.openingDays}"
            />


        <android.support.v7.widget.AppCompatTextView
            style="@style/TextViewSmall"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="@{data.openingTime}"
            android:textColor="@{data.openingFlag ? @color/theme_color : @color/black_light }"

            />


    </LinearLayout>

</layout>


