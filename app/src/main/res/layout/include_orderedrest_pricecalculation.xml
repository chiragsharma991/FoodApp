<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="data"
            type="dk.eatmore.foodapp.fragment.Dashboard.Order.Data">

        </variable>

        <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>



        <variable
            name="myclickhandler"
            type="dk.eatmore.foodapp.fragment.Dashboard.Order.OrderedRestaurant.MyClickHandler"
            >
        </variable>

    </data>


    <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ordernumber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_number"
                    style="@style/TitleMidiumlight_TextViewMid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/ordredetaljer" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/order_date"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@{data.order_no}"
                    android:textColor="@color/dark_blue" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:alpha="0.2"
                android:background="@color/divider_color" />

            <LinearLayout
                android:id="@+id/add_parentitem_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:alpha="0.2"
                android:background="@color/divider_color" />

            <LinearLayout
                android:id="@+id/subtotal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/subtotal" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/subtotal_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="45,00kr" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/discount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/rabat" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/discount_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/restuptominimum_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/rest_op_til_minimum" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/restuptominimum_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/shipping_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/leveringsomkostninger" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/shipping_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/additional_charge_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/servicegebyr" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/additional_charge_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/eatmoregift_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:textColor="@color/theme_color"
                    android:singleLine="true"
                    android:text="@string/eatmore_giftcard" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/eatmoregift_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:textColor="@color/theme_color"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/restaurantgift_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:textColor="@color/theme_color"
                    android:singleLine="true"
                    android:text="@string/restaurant_giftcard" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/restaurantgift_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:textColor="@color/theme_color"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/SubtitleMidium_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/samlet_pris" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/total_txt"
                    style="@style/SubtitleMidium_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="145,00kr" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:alpha="0.2"
                android:background="@color/divider_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Batlingsmetode:" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/onlin_offline_txt"
                    style="@style/Subtitle_TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@{data.paymethod.equalsIgnoreCase(`1`) ? @string/online : @string/kontant_betaling}" />


            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                style="@style/Button"
                tools:targetApi="lollipop"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:backgroundTint="@color/theme_color"
                android:fontFamily="@font/hindvadodara_light"
                android:gravity="center"
                android:onClick="@{myclickhandler :: re_Order}"
                android:stateListAnimator="@null"
                android:text="@string/genbestil"
                android:textColor="@color/white" />


        </LinearLayout>


    </android.support.v7.widget.CardView>



</layout>




