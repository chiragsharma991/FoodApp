<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <!--
                <variable name="util" type="dk.eatmore.foodapp.utils.BindDataUtils"/>
        -->
        <import type="android.view.View" />

        <variable
            name="util"
            type="dk.eatmore.foodapp.utils.BindDataUtils"
            />


        <variable
            name="giftcardsInfo"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Account.Profile.GiftcardsInfo"
            >
        </variable>

        <variable
            name="handler"
            type="dk.eatmore.foodapp.activity.main.home.fragment.Dashboard.Account.Coupan.MyClickHandler">

        </variable>

    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/search_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"

        >

        <RelativeLayout
            android:id="@+id/rowChildItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.constraint.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.21" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.70" />


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <!--                        <android.support.v7.widget.CardView
                                                    android:layout_width="@dimen/_60sdp"
                                                    android:layout_height="@dimen/_60sdp"
                                                    app:cardCornerRadius="@dimen/_8sdp"
                                                    app:cardBackgroundColor="@android:color/transparent"
                                                    app:cardElevation="@dimen/_2sdp">-->

                        <RelativeLayout
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imageview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />


                            <RelativeLayout
                                android:id="@+id/item_is_new"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_alignParentBottom="false"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:rotation="-40"
                                android:translationX="-12dp"
                                android:translationY="3dp"
                                android:visibility="@{giftcardsInfo.is_new.equalsIgnoreCase(`1`) ? View.VISIBLE : View.GONE}"
                                >

                                <dk.eatmore.foodapp.utils.ZigzagView
                                    android:id="@+id/zigzag_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:zigzagBackgroundColor="@color/green"
                                    app:zigzagHeight="1dp"
                                    app:zigzagShadowAlpha="0.9"
                                    app:zigzagSides="bottom">


                                </dk.eatmore.foodapp.utils.ZigzagView>


                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:layout_centerInParent="true"
                                    android:singleLine="true"
                                    android:text="@string/new_rest"
                                    android:textColor="@color/white"
                                    android:translationY="-2dp"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                        </RelativeLayout>


                        <!--
                                                    </android.support.v7.widget.CardView>
                        -->


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Subtitle_TextViewSmall"
                            android:id="@+id/restaurant_name"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            />



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:scaleType="centerInside"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@mipmap/price_tag" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextViewSmall"
                                android:layout_gravity="center_vertical"
                                android:maxLength="4"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text="-20%"
                                android:textColor="@color/white" />


                        </FrameLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="top"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/map_marker"
                                android:tint="@color/black" />


                            <android.support.v7.widget.AppCompatTextView
                                style="@style/SubtitleRegular_TextViewSmall"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:textSize="@dimen/_11sdp"
                                android:text="@{giftcardsInfo.address}"

                                />


                        </LinearLayout>



                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/value_txt"
                            style="@style/Subtitle_TextViewSmall"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textSize="@dimen/_11sdp"
                            android:maxLines="3"
                            android:textColor="@color/theme_color"
                            android:text="@{@string/vaerdi_kr(util.convertCurrencyToDanishWithoutLabel(giftcardsInfo.value))}"

                            />
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/Subtitle_TextViewSmall"
                            android:id="@+id/validtill"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="@{giftcardsInfo.valid_till == null ? View.GONE : View.VISIBLE}"
                            android:text="@{giftcardsInfo.valid_till == null ? `` : `Udløbsdato : `+handler.parseTimeTommddyy(giftcardsInfo.valid_till)}"
                            />

<!--
                        android:text="@{@string/vaerdi_kr(util.convertCurrencyToDanishWithoutLabel(String.valueOf(giftcardsInfo.value)))}"
-->


                        <!--

                                                <android.support.v7.widget.AppCompatTextView
                                                    android:id="@+id/not_available_txt"
                                                    style="@style/Subtitle_TextViewSmall"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginStart="@dimen/_23sdp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:textSize="@dimen/_11sdp"
                                                    android:text="@string/ikke_tilg_ngelig"
                                                    android:textColor="@color/theme_color"
                                                    android:visibility="@{(ordertype.equalsIgnoreCase(@string/notavailable)) ? View.VISIBLE : View.GONE }" />
                        -->


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_ratedview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                    style="@style/Subtitle_TextViewSmall"
                                    android:textSize="@dimen/_13sdp"
                                    android:id="@+id/balance_txt"
                                    android:textColor="@color/theme_color"
                                    android:text="@{@string/saldo_kr(util.convertCurrencyToDanishWithoutLabel(String.valueOf(giftcardsInfo.balance)))}"
                                    android:textStyle="bold"
                                    />

                                <!--
                                                                    android:text="@{@string/saldo_kr(util.convertCurrencyToDanishWithoutLabel(String.valueOf(giftcardsInfo.balance)))}"
                                -->


                                <android.support.v7.widget.AppCompatButton
                                    android:id="@+id/order_now"
                                    style="@style/Button"
                                    android:layout_gravity="start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:onClick="@{(v)-> handler.on_click(v,giftcardsInfo)}"
                                    android:background="@color/background_light"
                                    android:text="@string/ordernow"
                                    android:backgroundTint="@color/theme_color"
                                    android:fontFamily="@font/hindvadodara_light"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/white"
                                    />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>


                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_one" />


                <!--      <View
                          android:id="@+id/view_divider_two"
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:layout_marginEnd="@dimen/_8sdp"
                          android:layout_marginTop="@dimen/_8sdp"
                          android:layout_marginBottom="@dimen/_16sdp"
                          android:alpha="0.2"
                          android:background="@color/divider_color"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:visibility="invisible"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/linear_restinfo"
                          app:layout_constraintBottom_toBottomOf="parent"
                          />
      -->

                <!--<ProgressBar
                    android:id="@+id/fav_proress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:indeterminate="true"
                    android:scaleY="4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
-->
            </android.support.constraint.ConstraintLayout>


        </RelativeLayout>



    </android.support.v7.widget.CardView>


</layout>



