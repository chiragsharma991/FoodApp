    </style>


    <style name="SubtitleMidium_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>

    <style name="SubtitleRegular_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <style name="Subtitle_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <!--Button-->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/theme_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>



    <!--EditText-->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="EditText_Normal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <style name="userEdittext" parent="styleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="styleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000</item><!--?android:attr/textColorSecondary-->
        <item name="android:textColorHint">#000</item><!--?android:attr/textColorSecondaryInverse-->
    </style>


    <!--Card view-->

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/_2sdp</item>

    </style>
    <style name="CardViewStyleOutMargin" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/_2sdp</item>

    </style>




    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="textinputfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/hindvadodara_light</item>
    </style>


    <!--customise chat wedget-->


    <color name="chat_bubble_agent">@android:color/white</color>
    <color name="chat_bubble_visitor">@color/theme_color</color>


    <style name="ZopimChatTheme" parent="AppTheme.NoActionBar">
        <!--Chat UI uses the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Customize chat theme here. -->
        <item name="colorAccent">@color/theme_color</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textColorSecondary">@color/theme_color</item>


    </style>

    <!--Customize not agents button-->
    <style name="no_agents_button">
        <item name="android:background">@color/theme_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>
