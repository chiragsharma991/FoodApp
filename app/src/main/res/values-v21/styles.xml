<resources>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColorPrimary">@color/theme_color_primary_dark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="AppCompatAlertDialogDefaultStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle.Transparent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColorPrimary">@color/theme_color_primary_dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>




    <!--Text view -->

    <style name="TextViewLarge" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>

    </style>
    <style name="TextViewMid" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>
    <style name="TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>

    <!--Button-->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_l</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/theme_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>




    <!--EditText-->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="EditText_Normal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>



</resources>
