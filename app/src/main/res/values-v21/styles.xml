<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/theme_color</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="Animation.MyAwesomeAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slidefrombottom</item>
        <item name="android:activityOpenExitAnimation">@anim/slidefromtop</item>
        <item name="android:activityCloseEnterAnimation">@anim/slidefrombottom</item>
        <item name="android:activityCloseExitAnimation">@anim/slidefromtop</item>
    </style>

    <!--Text input layout-->
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <!--alert bar style-->

    <style name="AppCompatAlertDialogDefaultStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle.Transparent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColorPrimary">@color/theme_color_primary_dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>




    <!--Text view -->

    <style name="TextViewLarge" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>

    </style>
    <style name="TextViewMid" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>
    <style name="TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <!--project Text style  (Mid > Regular > light)-->

    <style name="TitleMidium_TextViewMid" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="TitleMidiumlight_TextViewMid" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_r</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>




    <style name="TitleMidium_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>
    <style name="TitleRegular_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_r</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>

    <style name="Titlelight_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_l</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <style name="SubtitleMidium_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>

    <style name="SubtitleRegular_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <style name="Subtitle_TextViewSmall" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black_txt_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <!--Button-->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_l</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/theme_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>





    <!--EditText-->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="EditText_Normal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/hindvadodara_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <!--Card view-->

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/_2sdp</item>

    </style>
    <style name="CardViewStyleOutMargin" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/_2sdp</item>

    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ubuntu_r</item>

    </style>




</resources>
